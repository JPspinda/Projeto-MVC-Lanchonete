@{
    ViewData["Title"] = "Administrador";
}

<section class="vh-100 bg-dark d-flex align-items-center justify-content-center">
    <div class="container text-center">
        <div class="bg-secondary bg-opacity-25 border border-warning-subtle shadow-lg p-5 rounded-4 animate-fade">
            <div class="mb-4">
                <i class="bi bi-gear-fill text-warning fs-1 mb-3 d-block"></i>
                <h2 class="text-warning fw-bold">Área do Administrador</h2>
                <p class="text-light-50 fs-5 mt-3 mb-4">
                    Gerencie o conteúdo, os produtos e as configurações do site de forma prática e segura.
                </p>
            </div>

            <a asp-area="" asp-controller="Home" asp-action="Index"
               class="btn btn-warning btn-lg fw-semibold px-5 shadow-sm transition">
                <i class="bi bi-house-door-fill me-2"></i> Voltar à Home Page
            </a>
        </div>
    </div>
</section>

<style>
    .animate-fade {
        animation: fadeIn 0.8s ease-in-out;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(15px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .btn.transition:hover {
        transform: scale(1.05);
        transition: 0.2s ease;
        box-shadow: 0 0 15px rgba(255, 193, 7, 0.4);
    }
</style>
