<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LanchesMac</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/LanchesMac.styles.css" asp-append-version="true" />
</head>

<body class="bg-dark text-light">

    <!-- NAVBAR -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark border-bottom border-secondary shadow-sm">
            <div class="container">
                <a class="navbar-brand fw-bold text-warning d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-basket2-fill me-2 fs-4"></i> LanchesMac Admin
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-light fw-semibold" asp-area="Admin" asp-controller="Admin" asp-action="Index">
                                <i class="bi bi-house-door-fill me-1"></i> Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light fw-semibold" asp-area="Admin" asp-controller="AdminLanches" asp-action="Index">
                                <i class="bi bi-bag-fill me-1"></i> Lanches
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light fw-semibold" asp-area="Admin" asp-controller="AdminCategorias" asp-action="Index">
                                <i class="bi bi-tags-fill me-1"></i> Categorias
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light fw-semibold" asp-area="Admin" asp-controller="AdminPedidos" asp-action="Index">
                                <i class="bi bi-receipt-cutoff me-1"></i> Pedidos
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light fw-semibold" asp-area="Admin" asp-controller="AdminRelatorioVendas" asp-action="Index">
                                <i class="bi bi-receipt-cutoff me-1"></i> Relatórios
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- CONTEÚDO PRINCIPAL -->
    <main class="container py-5">
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer class="bg-dark border-top border-secondary text-center text-md-start text-light pt-5">
        <div class="container pb-4">
            <div class="row gy-4">

                <div class="col-md-3 col-lg-4">
                    <h6 class="text-uppercase fw-bold mb-3 text-warning">
                        <i class="bi bi-shop me-2"></i> LanchesMac
                    </h6>
                    <p class="small text-secondary">
                        Painel administrativo para gerenciamento de produtos, categorias e pedidos.
                    </p>
                </div>

                <div class="col-md-2 col-lg-2">
                    <h6 class="text-uppercase fw-bold mb-3 text-warning">Recursos</h6>
                    <ul class="list-unstyled small">
                        <li><a href="#" class="text-reset text-decoration-none">Lanches</a></li>
                        <li><a href="#" class="text-reset text-decoration-none">Categorias</a></li>
                        <li><a href="#" class="text-reset text-decoration-none">Pedidos</a></li>
                        <li><a href="#" class="text-reset text-decoration-none">Relatórios</a></li>
                    </ul>
                </div>

                <div class="col-md-3 col-lg-3">
                    <h6 class="text-uppercase fw-bold mb-3 text-warning">Links úteis</h6>
                    <ul class="list-unstyled small">
                        <li><a href="#" class="text-reset text-decoration-none">Configurações</a></li>
                        <li><a href="#" class="text-reset text-decoration-none">Ajuda</a></li>
                        <li><a href="#" class="text-reset text-decoration-none">Suporte</a></li>
                    </ul>
                </div>

                <div class="col-md-4 col-lg-3">
                    <h6 class="text-uppercase fw-bold mb-3 text-warning">Contato</h6>
                    <ul class="list-unstyled small">
                        <li><i class="bi bi-geo-alt me-2"></i> São Paulo, SP</li>
                        <li><i class="bi bi-envelope me-2"></i> contato@lanchesmac.com</li>
                        <li><i class="bi bi-telephone me-2"></i> +55 (11) 99999-9999</li>
                    </ul>
                </div>
            </div>

            <hr class="border-secondary my-4" />

            <div class="d-flex justify-content-center gap-3 mb-3">
                <a href="#" class="text-reset"><i class="bi bi-facebook fs-5"></i></a>
                <a href="#" class="text-reset"><i class="bi bi-instagram fs-5"></i></a>
                <a href="#" class="text-reset"><i class="bi bi-linkedin fs-5"></i></a>
                <a href="#" class="text-reset"><i class="bi bi-github fs-5"></i></a>
            </div>

            <div class="text-center small py-3 border-top border-secondary text-secondary">
                © @DateTime.Now.Year - <span class="text-warning">LanchesMac</span>. Todos os direitos reservados.
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
