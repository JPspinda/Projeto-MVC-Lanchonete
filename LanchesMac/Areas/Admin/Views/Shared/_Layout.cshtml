<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LanchesMac</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/LanchesMac.styles.css" asp-append-version="true" />
</head>

<body class="bg-dark text-light">

    <!-- NAVBAR -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark border-bottom border-secondary shadow-sm">
            <div class="container">
                <a class="navbar-brand fw-bold text-warning d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-basket2-fill me-2 fs-4"></i> LanchesMac Admin
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-light fw-semibold" asp-area="Admin" asp-controller="Admin" asp-action="Index">
                                <i class="bi bi-house-door-fill me-1"></i> Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light fw-semibold" asp-area="Admin" asp-controller="AdminLanches" asp-action="Index">
                                <i class="bi bi-bag-fill me-1"></i> Lanches
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light fw-semibold" asp-area="Admin" asp-controller="AdminCategorias" asp-action="Index">
                                <i class="bi bi-tags-fill me-1"></i> Categorias
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light fw-semibold" asp-area="Admin" asp-controller="AdminPedidos" asp-action="Index">
                                <i class="bi bi-receipt-cutoff me-1"></i> Pedidos
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light fw-semibold" asp-area="Admin" asp-controller="AdminRelatorioVendas" asp-action="Index">
                                <i class="bi bi-graph-up-arrow me-1"></i> Relatórios
                            </a>
                        </li>
                        <!--Gráficos-->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-light fw-semibold" href="#" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-bar-chart-fill me-1"></i> Gráficos de Vendas
                            </a>

                            <ul class="dropdown-menu dropdown-menu-dark bg-dark border-secondary">
                                <li>
                                    <a class="dropdown-item text-light"
                                       asp-area="Admin" asp-controller="AdminGrafico" asp-action="Index">
                                        Vendas Anual
                                    </a>
                                </li>

                                <li>
                                    <a class="dropdown-item text-light"
                                       asp-area="Admin" asp-controller="AdminGrafico"
                                       asp-action="VendasMensal" asp-route-dias="30">
                                        Vendas Mensal
                                    </a>
                                </li>

                                <li>
                                    <a class="dropdown-item text-light"
                                       asp-area="Admin" asp-controller="AdminGrafico"
                                       asp-action="VendasSemanal" asp-route-dias="7">
                                        Vendas Semanal
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-light fw-semibold" asp-area="Admin" asp-controller="AdminImagens" asp-action="Index">
                                <i class="bi bi-image me-1"></i> Imagens
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- CONTEÚDO PRINCIPAL -->
    <main class="container py-5">
        @RenderBody()
    </main>

    <partial name="_Footer" />

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
