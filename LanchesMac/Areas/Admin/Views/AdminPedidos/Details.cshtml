@model LanchesMac.Models.Pedido

@{
    ViewData["Title"] = "Detalhes do Pedido";
}

<section class="bg-dark text-light py-5 min-vh-100">
    <div class="container">
        <!-- Cabeçalho -->
        <div class="text-center mb-5">
            <h2 class="fw-bold text-warning">
                <i class="bi bi-receipt me-2"></i>Detalhes do Pedido
            </h2>
            <hr class="border-secondary opacity-50 w-25 mx-auto" />
        </div>

        <!-- Informações do Cliente -->
        <div class="bg-gradient border border-secondary rounded-4 shadow-lg p-4 mb-4">
            <h4 class="text-warning mb-3">
                <i class="bi bi-person-vcard me-2"></i>Informações do Cliente
            </h4>
            <hr class="border-secondary" />
            <dl class="row">
                <dt class="col-sm-3 fw-bold text-secondary">@Html.DisplayNameFor(model => model.Nome)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Nome)</dd>

                <dt class="col-sm-3 fw-bold text-secondary">@Html.DisplayNameFor(model => model.Sobrenome)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Sobrenome)</dd>

                <dt class="col-sm-3 fw-bold text-secondary">@Html.DisplayNameFor(model => model.Endereco1)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Endereco1)</dd>

                <dt class="col-sm-3 fw-bold text-secondary">@Html.DisplayNameFor(model => model.Endereco2)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Endereco2)</dd>

                <dt class="col-sm-3 fw-bold text-secondary">@Html.DisplayNameFor(model => model.Cep)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Cep)</dd>

                <dt class="col-sm-3 fw-bold text-secondary">@Html.DisplayNameFor(model => model.Estado)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Estado)</dd>

                <dt class="col-sm-3 fw-bold text-secondary">@Html.DisplayNameFor(model => model.Cidade)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Cidade)</dd>

                <dt class="col-sm-3 fw-bold text-secondary">@Html.DisplayNameFor(model => model.Telefone)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Telefone)</dd>

                <dt class="col-sm-3 fw-bold text-secondary">@Html.DisplayNameFor(model => model.Email)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

                <dt class="col-sm-3 fw-bold text-secondary">@Html.DisplayNameFor(model => model.PedidoEnviado)</dt>
                <dd class="col-sm-9">
                    <span class="text-info">@Model.PedidoEnviado.ToString("dd/MM/yyyy HH:mm")</span>
                </dd>

                <dt class="col-sm-3 fw-bold text-secondary">@Html.DisplayNameFor(model => model.PedidoEntregueEm)</dt>
                <dd class="col-sm-9">
                    @if (Model.PedidoEntregueEm == null)
                    {
                        <span class="text-warning">Aguardando entrega</span>
                    }
                    else
                    {
                        <span class="text-success">@Model.PedidoEntregueEm?.ToString("dd/MM/yyyy HH:mm")</span>
                    }
                </dd>
            </dl>
        </div>

        <!-- Botões -->
        <div class="d-flex justify-content-between mt-4">
            <a asp-action="Index"
               class="btn btn-outline-warning btn-lg fw-semibold rounded-pill px-4 shadow-sm">
                <i class="bi bi-arrow-left-circle me-2"></i> Voltar à Lista
            </a>

            <a asp-action="Edit" asp-route-id="@Model?.PedidoId"
               class="btn btn-success btn-lg fw-semibold rounded-pill px-4 shadow-sm">
                <i class="bi bi-pencil-square me-2"></i> Editar Pedido
            </a>
        </div>
    </div>
</section>
