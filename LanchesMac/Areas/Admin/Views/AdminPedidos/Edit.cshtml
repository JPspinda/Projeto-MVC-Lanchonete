@model LanchesMac.Models.Pedido

@{
    ViewData["Title"] = "Editar Pedido";
}

<div class="container mt-4">
    <div class="card shadow p-4">
        <h2 class="mb-4">Editar Pedido</h2>
        <hr />

        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="PedidoId" />

            <div class="mb-3">
                <label asp-for="Nome" class="form-label">Nome</label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Sobrenome" class="form-label">Sobrenome</label>
                <input asp-for="Sobrenome" class="form-control" />
                <span asp-validation-for="Sobrenome" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Endereco1" class="form-label">Endereço</label>
                <input asp-for="Endereco1" class="form-control" />
                <span asp-validation-for="Endereco1" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Endereco2" class="form-label">Complemento</label>
                <input asp-for="Endereco2" class="form-control" />
                <span asp-validation-for="Endereco2" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-4 mb-3">
                    <label asp-for="Cep" class="form-label">CEP</label>
                    <input asp-for="Cep" class="form-control" />
                    <span asp-validation-for="Cep" class="text-danger"></span>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="Estado" class="form-label">Estado</label>
                    <input asp-for="Estado" class="form-control" />
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="Cidade" class="form-label">Cidade</label>
                    <input asp-for="Cidade" class="form-control" />
                    <span asp-validation-for="Cidade" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Telefone" class="form-label">Telefone</label>
                <input asp-for="Telefone" class="form-control" />
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label">E-mail</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="PedidoEnviado" class="form-label">Data de Envio</label>
                <input asp-for="PedidoEnviado" class="form-control" type="datetime-local" />
                <span asp-validation-for="PedidoEnviado" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label asp-for="PedidoEntregueEm" class="form-label">Data de Entrega</label>
                <input asp-for="PedidoEntregueEm" class="form-control" type="datetime-local" />
                <span asp-validation-for="PedidoEntregueEm" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">Voltar à Lista</a>
                <button type="submit" class="btn btn-primary">Salvar Alterações</button>
            </div>
        </form>
    </div>
</div>
