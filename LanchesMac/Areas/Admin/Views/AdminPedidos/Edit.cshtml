@model LanchesMac.Models.Pedido

@{
    ViewData["Title"] = "Editar Pedido";
}

<section class="bg-dark text-light py-5 min-vh-100">
    <div class="container">
        <div class="card bg-secondary bg-opacity-25 shadow-lg border border-secondary rounded-4 p-5">
            <div class="text-center mb-4">
                <h2 class="fw-bold text-warning">
                    <i class="bi bi-pencil-square me-2"></i>Editar Pedido
                </h2>
                <hr class="border-warning opacity-50 w-25 mx-auto" />
            </div>

            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="PedidoId" />

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="Nome" class="form-label fw-semibold">Nome</label>
                        <input asp-for="Nome" class="form-control bg-dark text-light border-secondary" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Sobrenome" class="form-label fw-semibold">Sobrenome</label>
                        <input asp-for="Sobrenome" class="form-control bg-dark text-light border-secondary" />
                        <span asp-validation-for="Sobrenome" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Endereco1" class="form-label fw-semibold">Endereço</label>
                        <input asp-for="Endereco1" class="form-control bg-dark text-light border-secondary" />
                        <span asp-validation-for="Endereco1" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Endereco2" class="form-label fw-semibold">Complemento</label>
                        <input asp-for="Endereco2" class="form-control bg-dark text-light border-secondary" />
                        <span asp-validation-for="Endereco2" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="Cep" class="form-label fw-semibold">CEP</label>
                        <input asp-for="Cep" class="form-control bg-dark text-light border-secondary" />
                        <span asp-validation-for="Cep" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="Estado" class="form-label fw-semibold">Estado</label>
                        <input asp-for="Estado" class="form-control bg-dark text-light border-secondary" />
                        <span asp-validation-for="Estado" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="Cidade" class="form-label fw-semibold">Cidade</label>
                        <input asp-for="Cidade" class="form-control bg-dark text-light border-secondary" />
                        <span asp-validation-for="Cidade" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Telefone" class="form-label fw-semibold">Telefone</label>
                        <input asp-for="Telefone" class="form-control bg-dark text-light border-secondary" />
                        <span asp-validation-for="Telefone" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Email" class="form-label fw-semibold">E-mail</label>
                        <input asp-for="Email" class="form-control bg-dark text-light border-secondary" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="PedidoEnviado" class="form-label fw-semibold">Data de Envio</label>
                        <input asp-for="PedidoEnviado" class="form-control bg-dark text-light border-secondary" type="datetime-local" />
                        <span asp-validation-for="PedidoEnviado" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="PedidoEntregueEm" class="form-label fw-semibold">Data de Entrega</label>
                        <input asp-for="PedidoEntregueEm" class="form-control bg-dark text-light border-secondary" type="datetime-local" />
                        <span asp-validation-for="PedidoEntregueEm" class="text-danger"></span>
                    </div>
                </div>

                <hr class="border-secondary opacity-50 mt-4" />

                <div class="d-flex justify-content-between mt-3">
                    <a asp-action="Index" class="btn btn-outline-warning fw-semibold px-4">
                        <i class="bi bi-arrow-left-circle me-1"></i> Voltar à Lista
                    </a>
                    <button type="submit" class="btn btn-success fw-semibold px-4 shadow-sm">
                        <i class="bi bi-save2 me-1"></i> Salvar Alterações
                    </button>
                </div>
            </form>
        </div>
    </div>
</section>
