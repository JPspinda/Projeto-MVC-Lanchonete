@model ReflectionIT.Mvc.Paging.PagingList<LanchesMac.Models.Pedido>

@{
    ViewData["Title"] = "Pedidos";
}

<section class="page-bg py-5 min-vh-100">
    <div class="container">

        <!-- Cabeçalho -->
        <div class="d-flex flex-wrap justify-content-between align-items-center mb-5">
            <h2 class="fw-bold text-warning mb-3 mb-md-0 title-glow">
                <i class="bi bi-truck me-2"></i> Gerenciar Pedidos
            </h2>
            <a asp-action="Create" class="btn btn-add fw-semibold px-4 py-2 shadow-sm rounded-pill">
                <i class="bi bi-plus-circle me-2"></i> Criar Novo Pedido
            </a>
        </div>

        <!-- Filtro -->
        <form method="get" class="row g-3 mb-5 filter-area">
            <div class="col-md-9">
                <input name="filter"
                       class="form-control search-input"
                       placeholder="Buscar pedidos..."
                       value="@Model.RouteValue["filter"]" />
            </div>

            <div class="col-md-3 d-flex align-items-center gap-3">
                <label class="switch-toggle">
                    <input class="form-check-input"
                           type="checkbox"
                           id="pendente"
                           name="pendente"
                           value="true"
                           @(Convert.ToBoolean(Model.RouteValue["pendente"]) ? "checked" : "")>
                    <span class="slider"></span>
                </label>

                <label for="pendente" class="switch-label">Todos</label>
            </div>

            <div class="col-md-3">
                <button type="submit" class="btn btn-search rounded-pill">
                    <i class="bi bi-search me-1"></i> Buscar
                </button>
            </div>

        </form>

        <!-- Contador -->
        <div class="d-flex flex-wrap justify-content-between align-items-center mb-4">
            <span class="text-warning fw-bold fs-5 mb-3 mb-md-0 counter-text">
                Total de pedidos:
                <span class="text-light">@Model.TotalRecordCount</span>
            </span>
            <vc:pager paging-list="@Model" />
        </div>

        <!-- CARDS -->
        <div class="row g-4">
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-xl-4">
                    <div class="card pedido-card h-100 shadow-lg rounded-4 position-relative">

                        <!-- Badge de status -->
                        <span class="status-badge @(item.Entregue ? "bg-success" : "bg-warning text-dark")">
                            @(item.Entregue ? "Entregue" : "Pendente")
                        </span>

                        <div class="card-body">

                            <!-- Nome -->
                            <h5 class="card-title text-warning fw-bold mb-3">
                                <i class="bi bi-person-circle me-2"></i>@item.Nome @item.Sobrenome
                            </h5>

                            <!-- Dados -->
                            <p class="info-line"><i class="bi bi-geo-alt-fill"></i> @item.Endereco1, Nº @item.Numero</p>
                            <p class="info-line"><i class="bi bi-building"></i> @item.Cidade - @item.Estado</p>
                            <p class="info-line"><i class="bi bi-envelope"></i> @item.Email</p>
                            <p class="info-line"><i class="bi bi-telephone"></i> @item.Telefone</p>

                            <hr class="divider" />

                            <p class="info-line"><i class="bi bi-clock"></i> <strong>Enviado:</strong> @item.PedidoEnviado.ToString("dd/MM/yyyy HH:mm")</p>
                            <p class="info-line"><i class="bi bi-check2-circle"></i> <strong>Entregue:</strong> @(item.PedidoEntregueEm?.ToString("dd/MM/yyyy HH:mm") ?? "-")</p>
                        </div>

                        <!-- Botões -->
                        <div class="card-footer bg-transparent border-0 text-center pb-3">

                            <div class="d-flex justify-content-center flex-wrap gap-2">

                                <a asp-action="PedidoLanches" asp-route-id="@item.PedidoId"
                                   class="btn btn-icon btn-items">
                                    <i class="bi bi-bag-check"></i>
                                </a>

                                <a asp-action="Delete" asp-route-id="@item.PedidoId"
                                   class="btn btn-icon btn-delete">
                                    <i class="bi bi-trash"></i>
                                </a>

                                @if (!item.Entregue)
                                {
                                    <form asp-action="ConfirmarEntregaDoPedido"
                                          asp-route-id="@item.PedidoId"
                                          method="post">
                                        <button type="submit" class="btn btn-icon btn-confirm">
                                            <i class="bi bi-check2-circle"></i>
                                        </button>
                                    </form>
                                }
                            </div>
                        </div>

                    </div>
                </div>
            }
        </div>

    </div>
</section>

<style>
    /* ----------- Geral ----------- */
    .page-bg {
        background: linear-gradient(180deg, #0b0b0b 0%, #111 100%);
        color: #f1f1f1;
    }

    .title-glow {
        text-shadow: 0 0 12px rgba(255, 193, 7, 0.55);
    }

    /* Input de busca */
    .search-input {
        background: #141414;
        border: 1px solid #c89d1b;
        color: #fff;
        padding: 10px 14px;
        border-radius: 10px;
    }

        .search-input:focus {
            border-color: #e3b736;
            box-shadow: 0 0 8px rgba(227, 183, 54, 0.5);
        }

    /* Botão buscar */
    .btn-search {
        background: transparent;
        border: 2px solid #c89d1b;
        color: #e7c15a;
        transition: 0.3s;
        font-weight: 600;
    }

        .btn-search:hover {
            background: #c89d1b;
            color: #111;
            box-shadow: 0 0 15px rgba(200, 157, 27, 0.7);
        }

    /* Botão criar novo pedido */
    .btn-add {
        background: #1f8d5a;
        color: #fff;
        border: none;
        box-shadow: 0 0 10px rgba(31, 141, 90, 0.35);
        transition: 0.25s;
    }

        .btn-add:hover {
            background: #27b06f;
            box-shadow: 0 0 18px rgba(39, 176, 111, 0.6);
        }


    /* ----------- Cards ----------- */
    .pedido-card {
        background: #141414;
        border: 1px solid #c89d1b;
        transition: 0.25s ease;
        backdrop-filter: blur(3px);
        padding-bottom: 10px;
    }

        .pedido-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 0 22px rgba(255, 215, 120, 0.3);
        }

    /* Divider */
    .divider {
        border-color: #2b2b2b;
    }

    /* Texto padrão */
    .info-line {
        margin: 4px 0;
        color: #d4d4d4;
        display: flex;
        align-items: center;
        gap: 6px;
        font-size: 0.95rem;
    }

    /* ----------- Status Badge ----------- */
    .status-badge {
        position: absolute;
        top: 12px;
        right: 12px;
        padding: 6px 14px;
        border-radius: 50px;
        font-weight: 700;
        font-size: 0.75rem;
        letter-spacing: .6px;
        box-shadow: 0 0 10px rgba(0,0,0,0.35);
    }

    .bg-warning {
        background: #f4c24d !important;
        color: #111 !important;
    }

    .bg-success {
        background: #2dbb66 !important;
    }

    /* ----------- Botões ----------- */
    .btn-icon {
        width: 42px;
        height: 42px;
        padding: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 12px;
        font-size: 1.15rem;
        transition: 0.25s;
        font-weight: 600;
    }

    /* Visual refinado por botão */
    .btn-details {
        border: 1px solid #0dcaf0;
        color: #0dcaf0;
    }

        .btn-details:hover {
            background: #0dcaf0;
            color: #000;
            box-shadow: 0 0 12px rgba(13, 202, 240, 0.55);
        }

    .btn-items {
        border: 1px solid #1fa463;
        color: #1fa463;
    }

        .btn-items:hover {
            background: #1fa463;
            color: #fff;
            box-shadow: 0 0 12px rgba(31, 164, 99, 0.6);
        }

    .btn-edit {
        border: 1px solid #e5b940;
        color: #e5b940;
    }

        .btn-edit:hover {
            background: #e5b940;
            color: #000;
            box-shadow: 0 0 12px rgba(229, 185, 64, 0.6);
        }

    .btn-delete {
        border: 1px solid #d9534f;
        color: #d9534f;
    }

        .btn-delete:hover {
            background: #d9534f;
            color: #fff;
            box-shadow: 0 0 15px rgba(217, 83, 79, 0.6);
        }

    .btn-confirm {
        border: 1px solid #00BFFF;
        color: #00BFFF;
    }

        .btn-confirm:hover {
            background: #00BFFF;
            color: #fff;
            box-shadow: 0 0 15px rgb(0, 92, 255, 0.6);
        }

    /* Switch Toggle Moderno */
    .switch-toggle {
        position: relative;
        width: 48px;
        height: 24px;
        display: inline-block;
    }

        .switch-toggle input {
            opacity: 0;
            width: 0;
            height: 0;
        }

    .slider {
        position: absolute;
        cursor: pointer;
        inset: 0;
        background-color: #333;
        border-radius: 34px;
        transition: .3s;
        border: 2px solid #c89d1b;
    }

        .slider:before {
            position: absolute;
            content: "";
            height: 18px;
            width: 18px;
            left: 3px;
            bottom: 2px;
            background-color: #c89d1b;
            border-radius: 50%;
            transition: .3s;
        }

    /* Quando marcado */
    .switch-toggle input:checked + .slider {
        background-color: #c89d1b;
    }

        .switch-toggle input:checked + .slider:before {
            transform: translateX(22px);
            background: #111;
        }

    .switch-label {
        color: #e7c15a;
        font-weight: 500;
        cursor: pointer;
        user-select: none;
    }

</style>
