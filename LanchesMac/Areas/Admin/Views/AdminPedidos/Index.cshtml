@model ReflectionIT.Mvc.Paging.PagingList<LanchesMac.Models.Pedido>

@{
    ViewData["Title"] = "Pedidos";
}

<section class="page-bg py-5 min-vh-100">
    <div class="container">

        <!-- Cabeçalho -->
        <div class="d-flex flex-wrap justify-content-between align-items-center mb-5">
            <h2 class="fw-bold text-warning mb-3 mb-md-0 title-glow">
                <i class="bi bi-truck me-2"></i> Gerenciar Pedidos
            </h2>
            <a asp-action="Create" class="btn btn-add fw-semibold px-4 py-2 shadow-sm rounded-pill">
                <i class="bi bi-plus-circle me-2"></i> Criar Novo Pedido
            </a>
        </div>

        <!-- Filtro -->
        <form method="get" class="row g-3 mb-5">
            <div class="col-md-9">
                <input name="filter"
                       class="form-control search-input shadow-sm"
                       placeholder="Buscar pedidos por nome, cidade, e-mail..."
                       value="@Model.RouteValue["filter"]" />
            </div>
            <div class="col-md-3 d-grid">
                <button type="submit" class="btn btn-search fw-semibold rounded-pill shadow-sm">
                    <i class="bi bi-search me-1"></i> Procurar
                </button>
            </div>
        </form>

        <!-- Contador -->
        <div class="d-flex flex-wrap justify-content-between align-items-center mb-4">
            <span class="text-warning fw-bold fs-5 mb-3 mb-md-0 counter-text">
                Total de pedidos:
                <span class="text-light">@Model.TotalRecordCount</span>
            </span>
            <vc:pager paging-list="@Model" />
        </div>

        <!-- CARDS -->
        <div class="row g-4">
            @foreach (var item in Model)
            {
                bool entregue = item.PedidoEntregueEm != null;

                <div class="col-md-6 col-xl-4">
                    <div class="card pedido-card h-100 shadow-lg rounded-4 position-relative">

                        <!-- Badge de status -->
                        <span class="status-badge @(entregue ? "bg-success" : "bg-warning text-dark")">
                            @(entregue ? "Entregue" : "Pendente")
                        </span>

                        <div class="card-body">

                            <!-- Nome -->
                            <h5 class="card-title text-warning fw-bold mb-3">
                                <i class="bi bi-person-circle me-2"></i>@item.Nome @item.Sobrenome
                            </h5>

                            <!-- Dados -->
                            <p class="info-line"><i class="bi bi-geo-alt-fill"></i> @item.Endereco1, Nº @item.Numero</p>
                            <p class="info-line"><i class="bi bi-building"></i> @item.Cidade - @item.Estado</p>
                            <p class="info-line"><i class="bi bi-envelope"></i> @item.Email</p>
                            <p class="info-line"><i class="bi bi-telephone"></i> @item.Telefone</p>

                            <hr class="divider" />

                            <p class="info-line"><i class="bi bi-clock"></i> <strong>Enviado:</strong> @item.PedidoEnviado.ToString("dd/MM/yyyy HH:mm")</p>
                            <p class="info-line"><i class="bi bi-check2-circle"></i> <strong>Entregue:</strong> @(item.PedidoEntregueEm?.ToString("dd/MM/yyyy HH:mm") ?? "-")</p>
                        </div>

                        <!-- Botões -->
                        <div class="card-footer bg-transparent border-0 text-center pb-3">

                            <div class="d-flex justify-content-center flex-wrap gap-2">

                                <a asp-action="Details" asp-route-id="@item.PedidoId"
                                   class="btn btn-icon btn-details">
                                    <i class="bi bi-eye"></i>
                                </a>

                                <a asp-action="PedidoLanches" asp-route-id="@item.PedidoId"
                                   class="btn btn-icon btn-items">
                                    <i class="bi bi-bag-check"></i>
                                </a>

                                <a asp-action="Edit" asp-route-id="@item.PedidoId"
                                   class="btn btn-icon btn-edit">
                                    <i class="bi bi-pencil"></i>
                                </a>

                                <a asp-action="Delete" asp-route-id="@item.PedidoId"
                                   class="btn btn-icon btn-delete">
                                    <i class="bi bi-trash"></i>
                                </a>

                                @if (!entregue)
                                {
                                    <form asp-action="ConfirmarEntregaDoPedido"
                                          asp-route-id="@item.PedidoId"
                                          method="post">
                                        <button type="submit" class="btn btn-icon btn-confirm">
                                            <i class="bi bi-check2-circle"></i>
                                        </button>
                                    </form>
                                }
                            </div>
                        </div>

                    </div>
                </div>
            }
        </div>

    </div>
</section>

<style>
    /* ----------- Geral ----------- */
    .page-bg {
        background: linear-gradient(180deg, #111 0%, #0d0d0d 100%);
        color: #eee;
    }

    .title-glow {
        text-shadow: 0 0 10px rgba(255, 193, 7, 0.5);
    }

    .search-input {
        background: #1a1a1a;
        border: 1px solid #b48609;
        color: #fff;
    }

    .btn-search {
        background: transparent;
        border: 2px solid #b48609;
        color: #b48609;
        transition: 0.3s;
    }

        .btn-search:hover {
            background: #b48609;
            color: #111;
        }

    .btn-add {
        background: #198754;
        color: #fff;
        border: none;
    }

    /* ----------- Cards ----------- */
    .pedido-card {
        background: #1a1a1a;
        border: 1px solid #b48609;
        transition: 0.25s ease;
    }

        .pedido-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 8px 25px rgba(255, 193, 7, 0.3);
        }

    .divider {
        border-color: #333;
    }

    .info-line {
        margin: 4px 0;
        color: #ccc;
    }

    /* ----------- Status Badge ----------- */
    .status-badge {
        position: absolute;
        top: 12px;
        right: 12px;
        padding: 5px 12px;
        border-radius: 20px;
        font-weight: 600;
        font-size: 0.75rem;
        letter-spacing: .5px;
    }

    .bg-warning {
        background: #ffc107 !important;
    }

    .bg-success {
        background: #28a745 !important;
    }

    /* ----------- Botões ----------- */
    .btn-icon {
        width: 40px;
        height: 40px;
        padding: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 12px;
        font-size: 1.1rem;
        transition: 0.3s;
    }

    .btn-details {
        border: 1px solid #0dcaf0;
        color: #0dcaf0;
    }

        .btn-details:hover {
            background: #0dcaf0;
            color: #000;
        }

    .btn-items {
        border: 1px solid #198754;
        color: #198754;
    }

        .btn-items:hover {
            background: #198754;
            color: #fff;
        }

    .btn-edit {
        border: 1px solid #ffc107;
        color: #ffc107;
    }

        .btn-edit:hover {
            background: #ffc107;
            color: #000;
        }

    .btn-delete {
        border: 1px solid #dc3545;
        color: #dc3545;
    }

        .btn-delete:hover {
            background: #dc3545;
            color: #fff;
        }

    .btn-confirm {
        border: 1px solid #28a745;
        color: #28a745;
    }

        .btn-confirm:hover {
            background: #28a745;
            color: #fff;
        }

</style>
