@model ReflectionIT.Mvc.Paging.PagingList<LanchesMac.Models.Pedido>

@{
    ViewData["Title"] = "Pedidos";
}

<section class="bg-dark text-light py-5 min-vh-100">
    <div class="container">
        <!-- Cabeçalho -->
        <div class="d-flex flex-wrap justify-content-between align-items-center mb-4">
            <h2 class="fw-bold text-warning mb-3 mb-md-0">
                <i class="bi bi-truck me-2"></i> Gerenciar Pedidos
            </h2>
            <a asp-action="Create" class="btn btn-success fw-semibold px-4 py-2 rounded-pill shadow-sm">
                <i class="bi bi-plus-circle me-2"></i> Criar Novo Pedido
            </a>
        </div>

        <!-- Filtro -->
        <form method="get" class="row g-2 mb-4">
            <div class="col-md-8">
                <input name="filter"
                       class="form-control bg-dark text-light border-warning shadow-sm"
                       placeholder="Buscar pedidos por nome, cidade, e-mail..."
                       value="@Model.RouteValue["filter"]" />
            </div>
            <div class="col-md-4 d-grid">
                <button type="submit" class="btn btn-outline-warning fw-semibold rounded-pill shadow-sm">
                    <i class="bi bi-search me-1"></i> Procurar
                </button>
            </div>
        </form>

        <!-- Contador e Paginação -->
        <div class="d-flex flex-wrap justify-content-between align-items-center mb-3">
            <span class="text-warning fw-bold fs-5 mb-2 mb-md-0">
                Total de pedidos: <span class="text-light">@Model.TotalRecordCount</span>
            </span>
            <vc:pager paging-list="@Model" />
        </div>

        <!-- Tabela de Pedidos -->
        <div class="table-responsive">
            <table class="table table-dark table-hover align-middle rounded-4 overflow-hidden shadow-lg">
                <thead class="table-warning text-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Nome)</th>
                        <th>@Html.DisplayNameFor(model => model.Sobrenome)</th>
                        <th>@Html.DisplayNameFor(model => model.Endereco1)</th>
                        <th>@Html.DisplayNameFor(model => model.Endereco2)</th>
                        <th>@Html.DisplayNameFor(model => model.Cep)</th>
                        <th>@Html.DisplayNameFor(model => model.Estado)</th>
                        <th>@Html.DisplayNameFor(model => model.Cidade)</th>
                        <th>@Html.DisplayNameFor(model => model.Telefone)</th>
                        <th>@Html.DisplayNameFor(model => model.Email)</th>
                        <th>@Html.DisplayNameFor(model => model.PedidoEnviado)</th>
                        <th>@Html.DisplayNameFor(model => model.PedidoEntregueEm)</th>
                        <th class="text-center">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Nome</td>
                            <td>@item.Sobrenome</td>
                            <td>@item.Endereco1</td>
                            <td>@item.Endereco2</td>
                            <td>@item.Cep</td>
                            <td>@item.Estado</td>
                            <td>@item.Cidade</td>
                            <td>@item.Telefone</td>
                            <td>@item.Email</td>
                            <td>@item.PedidoEnviado.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>
                                @(item.PedidoEntregueEm?.ToString("dd/MM/yyyy HH:mm") ?? "-")
                            </td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a asp-action="Edit" asp-route-id="@item.PedidoId"
                                       class="btn btn-outline-warning btn-sm" title="Editar">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.PedidoId"
                                       class="btn btn-outline-info btn-sm" title="Detalhes">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.PedidoId"
                                       class="btn btn-outline-danger btn-sm" title="Excluir">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                    <a asp-action="PedidoLanches" asp-route-id="@item.PedidoId"
                                       class="btn btn-outline-success btn-sm" title="Ver Itens do Pedido">
                                        <i class="bi bi-bag-check"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>

<style>
    /* Efeitos sutis de interação */
    table tr {
        transition: background-color 0.25s ease;
    }

        table tr:hover {
            background-color: rgba(255, 193, 7, 0.1);
        }

    th {
        white-space: nowrap;
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.9rem;
    }

    td {
        vertical-align: middle;
        font-size: 0.95rem;
    }

    .btn {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 10px rgba(255, 193, 7, 0.25);
        }

    .table {
        border-radius: 0.5rem;
    }
</style>
