@model LanchesMac.ViewModels.PedidoLancheViewModel

@{
    ViewData["Title"] = "Detalhes dos Lanches do Pedido";
    decimal pedidoTotal = 0;
}

<section class="bg-dark text-light py-5 min-vh-100">
    <div class="container">
        <div class="mb-4">
            <h2 class="fw-bold text-warning mb-3">Detalhes do Pedido</h2>
            <hr class="border-warning" />
            <div class="row g-3">
                <div class="col-md-3">
                    <p class="mb-1"><strong>Pedido:</strong></p>
                    <p>@Model.Pedido.PedidoId</p>
                </div>
                <div class="col-md-3">
                    <p class="mb-1"><strong>Cliente:</strong></p>
                    <p>@Model.Pedido.Nome</p>
                </div>
                <div class="col-md-3">
                    <p class="mb-1"><strong>Data:</strong></p>
                    <p>@Model.Pedido.PedidoEnviado</p>
                </div>
                <div class="col-md-3">
                    <p class="mb-1"><strong>Entrega:</strong></p>
                    <p>@Model.Pedido.PedidoEntregueEm</p>
                </div>
            </div>
        </div>

        <div class="table-responsive shadow-sm rounded">
            <table class="table table-dark table-hover align-middle">
                <thead class="table-warning text-dark">
                    <tr>
                        <th>Nome do Lanche</th>
                        <th class="text-center">Imagem</th>
                        <th class="text-end">Preço</th>
                        <th class="text-end">Quantidade</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Pedido.PedidoItens)
                    {
                        pedidoTotal += (item.Lanche.Preco * item.Quantidade);
                        <tr>
                            <td>@item.Lanche.Nome</td>
                            <td class="text-center">
                                <img src="@item.Lanche.ImagemUrl" class="img-thumbnail rounded shadow-sm" width="90" height="90" />
                            </td>
                            <td class="text-end fw-semibold">@string.Format("{0:C}", item.Lanche.Preco)</td>
                            <td class="text-end fw-semibold">(@item.Quantidade)</td>
                        </tr>
                    }
                    <tr class="border-top border-warning">
                        <td colspan="2"></td>
                        <td class="text-end fw-bold text-warning">Total do pedido:</td>
                        <td class="text-end fw-bold text-warning">@string.Format("{0:C}", pedidoTotal)</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="mt-4">
            <a asp-action="Index" class="btn btn-outline-info fw-semibold">
                <i class="bi bi-arrow-left"></i> Retornar
            </a>
        </div>
    </div>
</section>
