@model LanchesMac.Models.Pedido

@{
    ViewData["Title"] = "Criar Pedido";
}

<section class="bg-dark text-light py-5 min-vh-100">
    <div class="container">
        <div class="card bg-secondary bg-opacity-25 border border-secondary shadow-lg rounded-4 p-5 mx-auto" style="max-width: 800px;">
            <div class="text-center mb-4">
                <h2 class="fw-bold text-warning">
                    <i class="bi bi-plus-circle-fill me-2"></i>Criar Novo Pedido
                </h2>
                <p class="text-muted">Preencha as informações abaixo para registrar um novo pedido.</p>
                <hr class="border-warning opacity-50 w-25 mx-auto mt-3" />
            </div>

            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="Nome" class="form-label text-warning"></label>
                        <input asp-for="Nome" class="form-control bg-dark text-light border-secondary" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Sobrenome" class="form-label text-warning"></label>
                        <input asp-for="Sobrenome" class="form-control bg-dark text-light border-secondary" />
                        <span asp-validation-for="Sobrenome" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Endereco1" class="form-label text-warning"></label>
                        <input asp-for="Endereco1" class="form-control bg-dark text-light border-secondary" />
                        <span asp-validation-for="Endereco1" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Endereco2" class="form-label text-warning"></label>
                        <input asp-for="Endereco2" class="form-control bg-dark text-light border-secondary" />
                        <span asp-validation-for="Endereco2" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="Cep" class="form-label text-warning"></label>
                        <input asp-for="Cep" class="form-control bg-dark text-light border-secondary" />
                        <span asp-validation-for="Cep" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="Estado" class="form-label text-warning"></label>
                        <input asp-for="Estado" class="form-control bg-dark text-light border-secondary" />
                        <span asp-validation-for="Estado" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="Cidade" class="form-label text-warning"></label>
                        <input asp-for="Cidade" class="form-control bg-dark text-light border-secondary" />
                        <span asp-validation-for="Cidade" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Telefone" class="form-label text-warning"></label>
                        <input asp-for="Telefone" class="form-control bg-dark text-light border-secondary" />
                        <span asp-validation-for="Telefone" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Email" class="form-label text-warning"></label>
                        <input asp-for="Email" class="form-control bg-dark text-light border-secondary" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="PedidoEnviado" class="form-label text-warning"></label>
                        <input asp-for="PedidoEnviado" type="datetime-local" class="form-control bg-dark text-light border-secondary" />
                        <span asp-validation-for="PedidoEnviado" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="PedidoEntregueEm" class="form-label text-warning"></label>
                        <input asp-for="PedidoEntregueEm" type="datetime-local" class="form-control bg-dark text-light border-secondary" />
                        <span asp-validation-for="PedidoEntregueEm" class="text-danger"></span>
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-5">
                    <a asp-action="Index" class="btn btn-outline-warning fw-semibold px-4">
                        <i class="bi bi-arrow-left-circle me-1"></i> Voltar à Lista
                    </a>
                    <button type="submit" class="btn btn-success fw-semibold px-4 shadow-sm">
                        <i class="bi bi-check-circle-fill me-1"></i> Criar Pedido
                    </button>
                </div>
            </form>
        </div>
    </div>
</section>
