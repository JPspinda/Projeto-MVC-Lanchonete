@model LanchesMac.Models.Categoria

@{
    ViewData["Title"] = "Excluir Categoria";
}

<section class="bg-dark text-light py-5 min-vh-100">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="fw-bold text-danger">Excluir Categoria</h2>
            <a asp-action="Index" class="btn btn-outline-light">
                <i class="bi bi-arrow-left"></i> Voltar à Lista
            </a>
        </div>

        <div class="card bg-secondary bg-opacity-25 border-0 shadow-lg rounded-4 p-4">
            <h5 class="text-warning mb-3">Tem certeza que deseja excluir esta categoria?</h5>

            <dl class="row mb-4">
                <dt class="col-sm-3 text-warning fw-semibold">
                    @Html.DisplayNameFor(model => model.categoriaNome)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.categoriaNome)
                </dd>

                <dt class="col-sm-3 text-warning fw-semibold">
                    @Html.DisplayNameFor(model => model.Descricao)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Descricao)
                </dd>
            </dl>

            <form asp-action="Delete" class="mt-3">
                <input type="hidden" asp-for="CategoriaId" />
                <div class="d-flex justify-content-end gap-2">
                    <input type="submit" value="Excluir" class="btn btn-danger fw-semibold px-4" />
                    <a asp-action="Index" class="btn btn-outline-light px-4">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</section>
