@model LanchesMac.Models.Categoria

@{
    ViewData["Title"] = "Excluir Categoria";
}

<section class="bg-dark text-light py-5 min-vh-100 d-flex align-items-center">
    <div class="container">
        <div class="card bg-secondary bg-opacity-25 border border-secondary shadow-lg rounded-4 p-5 mx-auto" style="max-width: 700px;">

            <div class="text-center mb-4">
                <h2 class="fw-bold text-danger">
                    <i class="bi bi-trash3-fill me-2"></i>Excluir Categoria
                </h2>
                <p class="text-muted mb-0">Esta ação não poderá ser desfeita.</p>
                <hr class="border-danger opacity-50 w-25 mx-auto mt-3" />
            </div>

            <div class="mb-4">
                <h5 class="text-warning mb-3 text-center">
                    Tem certeza que deseja excluir esta categoria?
                </h5>

                <dl class="row justify-content-center">
                    <dt class="col-sm-4 text-warning text-end fw-semibold">
                        @Html.DisplayNameFor(model => model.categoriaNome)
                    </dt>
                    <dd class="col-sm-8">
                        <span class="badge bg-dark text-light px-3 py-2 fs-6">
                            @Html.DisplayFor(model => model.categoriaNome)
                        </span>
                    </dd>

                    <dt class="col-sm-4 text-warning text-end fw-semibold">
                        @Html.DisplayNameFor(model => model.Descricao)
                    </dt>
                    <dd class="col-sm-8">
                        <span class="text-light">
                            @Html.DisplayFor(model => model.Descricao)
                        </span>
                    </dd>
                </dl>
            </div>

            <form asp-action="Delete" class="mt-4">
                <input type="hidden" asp-for="CategoriaId" />
                <div class="d-flex justify-content-center gap-3">
                    <button type="submit" class="btn btn-danger fw-semibold px-4 shadow-sm btn-lg animate-btn">
                        <i class="bi bi-trash-fill me-1"></i> Excluir
                    </button>
                    <a asp-action="Index" class="btn btn-outline-light fw-semibold px-4 btn-lg">
                        <i class="bi bi-arrow-left-circle me-1"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</section>

<style>
    /* Animação suave no hover do botão principal */
    .animate-btn {
        transition: all 0.2s ease-in-out;
    }

        .animate-btn:hover {
            transform: scale(1.05);
            box-shadow: 0 0 15px rgba(255, 0, 0, 0.3);
        }

    /* Sutil animação de entrada */
    .card {
        animation: fadeInUp 0.6s ease-out;
    }

    @@keyframes fadeInUp {
        from

    {
        opacity: 0;
        transform: translateY(20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }
</style>
