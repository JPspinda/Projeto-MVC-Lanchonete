@model IEnumerable<LanchesMac.Models.Categoria>

@{
    ViewData["Title"] = "Categorias";
}

<section class="bg-dark text-light py-5 min-vh-100">
    <div class="container">
        <!-- Cabeçalho -->
        <div class="d-flex flex-wrap justify-content-between align-items-center mb-4">
            <h2 class="fw-bold text-warning mb-3 mb-md-0">
                <i class="bi bi-tags-fill me-2"></i> Gerenciar Categorias
            </h2>
            <a asp-action="Create" class="btn btn-success fw-semibold shadow-sm px-4 py-2 rounded-pill">
                <i class="bi bi-plus-circle me-2"></i>Nova Categoria
            </a>
        </div>

        <!-- Tabela -->
        <div class="table-responsive rounded-4 shadow-lg overflow-hidden">
            <table class="table table-dark table-striped table-hover align-middle mb-0">
                <thead class="bg-warning text-dark fw-semibold">
                    <tr>
                        <th class="ps-4">@Html.DisplayNameFor(model => model.categoriaNome)</th>
                        <th>@Html.DisplayNameFor(model => model.Descricao)</th>
                        <th class="text-center" style="width: 220px;">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4">@Html.DisplayFor(modelItem => item.categoriaNome)</td>
                            <td>@Html.DisplayFor(modelItem => item.Descricao)</td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a asp-action="Edit"
                                       asp-route-id="@item.CategoriaId"
                                       class="btn btn-outline-warning btn-sm">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <a asp-action="Details"
                                       asp-route-id="@item.CategoriaId"
                                       class="btn btn-outline-info btn-sm">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Delete"
                                       asp-route-id="@item.CategoriaId"
                                       class="btn btn-outline-danger btn-sm">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Rodapé / Voltar -->
        <div class="text-center mt-5">
            <a asp-area=""
               asp-controller="Home"
               asp-action="Index"
               class="btn btn-outline-light fw-semibold px-5 py-2 rounded-pill">
                <i class="bi bi-arrow-left-circle me-2"></i>Voltar à Home
            </a>
        </div>
    </div>
</section>

<style>
    .table-dark th,
    .table-dark td {
        vertical-align: middle;
    }

    .btn-group .btn {
        transition: all 0.2s ease-in-out;
    }

        .btn-group .btn:hover {
            transform: translateY(-2px);
        }

    .table-striped > tbody > tr:nth-of-type(odd) {
        background-color: rgba(255, 255, 255, 0.05);
    }

    .table-striped > tbody > tr:hover {
        background-color: rgba(255, 193, 7, 0.1);
    }
</style>
