@model IEnumerable<LanchesMac.Models.Categoria>

@{
    ViewData["Title"] = "Categorias";
}

<section class="vh-100 bg-dark text-light py-5">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="fw-bold text-warning">Categorias</h2>
            <a asp-action="Create" class="btn btn-success fw-semibold">
                <i class="bi bi-plus-circle me-2"></i>Nova Categoria
            </a>
        </div>

        <div class="table-responsive">
            <table class="table table-dark table-hover align-middle rounded-3 overflow-hidden shadow-sm">
                <thead class="table-secondary text-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.categoriaNome)</th>
                        <th>@Html.DisplayNameFor(model => model.Descricao)</th>
                        <th class="text-center">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.categoriaNome)</td>
                            <td>@Html.DisplayFor(modelItem => item.Descricao)</td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.CategoriaId" class="btn btn-outline-warning btn-sm me-1">
                                    <i class="bi bi-pencil-square"></i> Editar
                                </a>
                                <a asp-action="Details" asp-route-id="@item.CategoriaId" class="btn btn-outline-info btn-sm me-1">
                                    <i class="bi bi-eye"></i> Detalhes
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.CategoriaId" class="btn btn-outline-danger btn-sm">
                                    <i class="bi bi-trash"></i> Excluir
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>
