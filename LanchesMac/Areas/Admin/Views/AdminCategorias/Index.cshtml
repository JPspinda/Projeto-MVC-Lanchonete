@model IEnumerable<LanchesMac.Models.Categoria>

@{
    ViewData["Title"] = "Categorias";
}

<section class="bg-dark text-light py-5 min-vh-100">
    <div class="container">

        <!-- Cabeçalho -->
        <div class="d-flex flex-wrap justify-content-between align-items-center mb-4">
            <h2 class="fw-bold text-warning mb-3 mb-md-0">
                <i class="bi bi-tags-fill me-2"></i> Gerenciar Categorias
            </h2>

            <a asp-action="Create"
               class="btn btn-warning fw-semibold shadow-sm px-4 py-2 rounded-pill text-dark">
                <i class="bi bi-plus-circle me-2"></i>Nova Categoria
            </a>
        </div>


        <!-- Cards de Categorias -->
        <div class="row g-4">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="card categoria-card h-100 text-light">

                        <div class="card-body">
                            <h4 class="card-title text-warning fw-bold">
                                @item.categoriaNome
                            </h4>

                            <p class="card-text opacity-75">
                                @item.Descricao
                            </p>
                        </div>

                        <!-- Ações -->
                        <div class="card-footer bg-transparent border-0 text-center pb-3">
                            <div class="d-flex justify-content-center flex-wrap gap-2">

                                <a asp-action="Edit"
                                   asp-route-id="@item.CategoriaId"
                                   class="btn btn-icon btn-edit">
                                    <i class="bi bi-pencil-square"></i>
                                </a>

                                <a asp-action="Details"
                                   asp-route-id="@item.CategoriaId"
                                   class="btn btn-icon btn-details">
                                    <i class="bi bi-eye"></i>
                                </a>

                                <a asp-action="Delete"
                                   asp-route-id="@item.CategoriaId"
                                   class="btn btn-icon btn-delete">
                                    <i class="bi bi-trash"></i>
                                </a>

                            </div>
                        </div>

                    </div>
                </div>
            }
        </div>


        <!-- Rodapé -->
        <div class="text-center mt-5">
            <a asp-area=""
               asp-controller="Home"
               asp-action="Index"
               class="btn btn-outline-light fw-semibold px-5 py-2 rounded-pill">
                <i class="bi bi-arrow-left-circle me-2"></i>Voltar à Home
            </a>
        </div>

    </div>
</section>

<style>
    /* Card padrão */
    .categoria-card {
        background: #111;
        border: 1px solid rgba(255, 215, 0, 0.15);
        border-radius: 18px;
        transition: all 0.3s ease-in-out;
        box-shadow: 0 0 12px rgba(255, 215, 0, 0.05);
    }

        .categoria-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 0 18px rgba(255, 215, 0, 0.25);
        }

    /* ----------- Botões ----------- */
    .btn-icon {
        width: 42px;
        height: 42px;
        padding: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 12px;
        font-size: 1.15rem;
        transition: 0.25s;
        font-weight: 600;
    }

    /* Botão Detalhes (Azul) */
    .btn-details {
        border: 1px solid #0dcaf0;
        color: #0dcaf0;
    }

        .btn-details:hover {
            background: #0dcaf0;
            color: #000;
            box-shadow: 0 0 12px rgba(13, 202, 240, 0.55);
        }

    /* Botão Editar (Dourado) */
    .btn-edit {
        border: 1px solid #e5b940;
        color: #e5b940;
    }

        .btn-edit:hover {
            background: #e5b940;
            color: #000;
            box-shadow: 0 0 12px rgba(229, 185, 64, 0.6);
        }

    /* Botão Excluir (Vermelho) */
    .btn-delete {
        border: 1px solid #d9534f;
        color: #d9534f;
    }

        .btn-delete:hover {
            background: #d9534f;
            color: #fff;
            box-shadow: 0 0 15px rgba(217, 83, 79, 0.6);
        }

</style>
