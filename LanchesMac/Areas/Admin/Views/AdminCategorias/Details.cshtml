@model LanchesMac.Models.Categoria

@{
    ViewData["Title"] = "Detalhes da Categoria";
}

<section class="bg-dark text-light py-5 min-vh-100">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="fw-bold text-warning">Detalhes da Categoria</h2>
            <a asp-action="Index" class="btn btn-outline-light">
                <i class="bi bi-arrow-left"></i> Voltar à Lista
            </a>
        </div>

        <div class="card bg-secondary bg-opacity-25 border-0 shadow-lg rounded-4 p-4">
            <dl class="row mb-0">
                <dt class="col-sm-3 fw-semibold text-warning">
                    @Html.DisplayNameFor(model => model.categoriaNome)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.categoriaNome)
                </dd>

                <dt class="col-sm-3 fw-semibold text-warning mt-3">
                    @Html.DisplayNameFor(model => model.Descricao)
                </dt>
                <dd class="col-sm-9 mt-3">
                    @Html.DisplayFor(model => model.Descricao)
                </dd>
            </dl>
        </div>

        <div class="d-flex justify-content-end mt-4">
            <a asp-action="Edit" asp-route-id="@Model?.CategoriaId" class="btn btn-warning fw-semibold me-2">
                <i class="bi bi-pencil-square"></i> Editar
            </a>
            <a asp-action="Index" class="btn btn-outline-light fw-semibold">
                <i class="bi bi-list"></i> Voltar à Lista
            </a>
        </div>
    </div>
</section>
