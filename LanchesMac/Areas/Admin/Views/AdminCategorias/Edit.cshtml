@model LanchesMac.Models.Categoria

@{
    ViewData["Title"] = "Editar Categoria";
}

<section class="bg-dark text-light py-5 min-vh-100">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="fw-bold text-warning">Editar Categoria</h2>
            <a asp-action="Index" class="btn btn-outline-light">
                <i class="bi bi-arrow-left"></i> Voltar à Lista
            </a>
        </div>

        <div class="card bg-secondary bg-opacity-25 border-0 shadow-lg rounded-4 p-4">
            <form asp-action="Edit" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="CategoriaId" />

                <div class="mb-3">
                    <label asp-for="categoriaNome" class="form-label fw-semibold"></label>
                    <input asp-for="categoriaNome" class="form-control bg-dark text-light border-secondary" />
                    <span asp-validation-for="categoriaNome" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Descricao" class="form-label fw-semibold"></label>
                    <input asp-for="Descricao" class="form-control bg-dark text-light border-secondary" />
                    <span asp-validation-for="Descricao" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-warning fw-semibold px-4">
                        <i class="bi bi-save me-1"></i> Salvar Alterações
                    </button>
                </div>
            </form>
        </div>
    </div>
</section>


