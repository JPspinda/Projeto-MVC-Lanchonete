@model LanchesMac.Models.Lanche

@{
    ViewData["Title"] = "Excluir Lanche";
}

<section class="vh-100 bg-dark d-flex align-items-center justify-content-center text-light">
    <div class="container" style="max-width: 750px;">
        <div class="card bg-secondary bg-opacity-10 border border-secondary shadow-lg p-5 rounded-4 animate-fade">

            <div class="text-center mb-4">
                <i class="bi bi-trash3-fill text-danger display-4 mb-3"></i>
                <h2 class="fw-bold text-danger">Excluir Lanche</h2>
                <p class="text-light">Tem certeza de que deseja excluir este lanche?</p>
                <hr class="border-danger opacity-50 w-50 mx-auto" />
            </div>

            <dl class="row small mb-4">
                <dt class="col-sm-4 fw-semibold text-warning">Nome</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Nome)</dd>

                <dt class="col-sm-4 fw-semibold text-warning">Descrição Curta</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.DescricaoCurta)</dd>

                <dt class="col-sm-4 fw-semibold text-warning">Descrição Detalhada</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.DescricaoDetalhada)</dd>

                <dt class="col-sm-4 fw-semibold text-warning">Preço</dt>
                <dd class="col-sm-8">R$ @Html.DisplayFor(model => model.Preco)</dd>

                <dt class="col-sm-4 fw-semibold text-warning">Imagem</dt>
                <dd class="col-sm-8">
                    <img src="@Model.ImagemUrl" alt="@Model.Nome" class="img-fluid rounded shadow-sm border border-secondary" style="max-width: 180px;" />
                </dd>

                <dt class="col-sm-4 fw-semibold text-warning">Thumbnail</dt>
                <dd class="col-sm-8">
                    <img src="@Model.ImagemThumbbailUrl" alt="@Model.Nome" class="img-fluid rounded shadow-sm border border-secondary" style="max-width: 120px;" />
                </dd>

                <dt class="col-sm-4 fw-semibold text-warning">Lanche Preferido</dt>
                <dd class="col-sm-8">@(Model.IsLanchePreferido ? "Sim" : "Não")</dd>

                <dt class="col-sm-4 fw-semibold text-warning">Em Estoque</dt>
                <dd class="col-sm-8">@(Model.EmEstoque ? "Sim" : "Não")</dd>

                <dt class="col-sm-4 fw-semibold text-warning">Categoria</dt>
                <dd class="col-sm-8">@Model.Categoria?.Descricao</dd>
            </dl>

            <form asp-action="Delete" class="text-center mt-4">
                <input type="hidden" asp-for="lancheId" />
                <button type="submit" class="btn btn-danger btn-lg px-4 rounded-3 me-2 shadow-sm transition">
                    <i class="bi bi-trash3 me-2"></i>Excluir
                </button>
                <a asp-action="Index" class="btn btn-outline-light btn-lg px-4 rounded-3 shadow-sm transition">
                    <i class="bi bi-arrow-left me-2"></i>Voltar à Lista
                </a>
            </form>
        </div>
    </div>
</section>

<style>
    /* Animação de entrada */
    .animate-fade {
        animation: fadeIn 0.7s ease-in-out;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(15px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Efeito hover nos botões */
    .transition:hover {
        transform: scale(1.04);
        box-shadow: 0 0 15px rgba(255, 193, 7, 0.3);
        transition: all 0.25s ease-in-out;
    }

    /* Ajuste das cores */
    .card {
        color: #e0e0e0;
    }
</style>
