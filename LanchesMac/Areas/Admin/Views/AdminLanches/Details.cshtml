@model LanchesMac.Models.Lanche

@{
    ViewData["Title"] = "Detalhes do Lanche";
}

<div class="container mt-4">
    <div class="card shadow p-4">
        <h2 class="mb-4 text-primary">Detalhes do Lanche</h2>
        <hr />

        <dl class="row">
            <dt class="col-sm-3 fw-bold">Nome</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Nome)</dd>

            <dt class="col-sm-3 fw-bold">Descrição Curta</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.DescricaoCurta)</dd>

            <dt class="col-sm-3 fw-bold">Descrição Detalhada</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.DescricaoDetalhada)</dd>

            <dt class="col-sm-3 fw-bold">Preço</dt>
            <dd class="col-sm-9">R$ @Html.DisplayFor(model => model.Preco)</dd>

            <dt class="col-sm-3 fw-bold">Imagem</dt>
            <dd class="col-sm-9">
                <img src="@Model.ImagemUrl" alt="@Model.Nome" class="img-thumbnail" style="max-width: 200px;" />
            </dd>

            <dt class="col-sm-3 fw-bold">Imagem Thumbnail</dt>
            <dd class="col-sm-9">
                <img src="@Model.ImagemThumbbailUrl" alt="@Model.Nome" class="img-thumbnail" style="max-width: 150px;" />
            </dd>

            <dt class="col-sm-3 fw-bold">Lanche Preferido</dt>
            <dd class="col-sm-9">
                @(Model.IsLanchePreferido ? "Sim" : "Não")
            </dd>

            <dt class="col-sm-3 fw-bold">Em Estoque</dt>
            <dd class="col-sm-9">
                @(Model.EmEstoque ? "Sim" : "Não")
            </dd>

            <dt class="col-sm-3 fw-bold">Categoria</dt>
            <dd class="col-sm-9">@Model.Categoria?.Descricao</dd>
        </dl>

        <div class="mt-4">
            <a asp-action="Edit" asp-route-id="@Model?.lancheId" class="btn btn-warning me-2">Editar</a>
            <a asp-action="Index" class="btn btn-secondary">Voltar à Lista</a>
        </div>
    </div>
</div>
