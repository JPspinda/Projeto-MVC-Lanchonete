@model LanchesMac.Models.Lanche

@{
    ViewData["Title"] = "Cadastrar Lanche";
}

<div class="container mt-4">
    <div class="card shadow p-4">
        <h2 class="mb-4">Cadastrar Novo Lanche</h2>
        <hr />

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="Nome" class="form-label">Nome do Lanche</label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="DescricaoCurta" class="form-label">Descrição Curta</label>
                <input asp-for="DescricaoCurta" class="form-control" />
                <span asp-validation-for="DescricaoCurta" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="DescricaoDetalhada" class="form-label">Descrição Detalhada</label>
                <textarea asp-for="DescricaoDetalhada" class="form-control" rows="3"></textarea>
                <span asp-validation-for="DescricaoDetalhada" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Preco" class="form-label">Preço</label>
                <input asp-for="Preco" class="form-control" />
                <span asp-validation-for="Preco" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ImagemUrl" class="form-label">URL da Imagem</label>
                <input asp-for="ImagemUrl" class="form-control" />
                <span asp-validation-for="ImagemUrl" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ImagemThumbbailUrl" class="form-label">URL da Miniatura</label>
                <input asp-for="ImagemThumbbailUrl" class="form-control" />
                <span asp-validation-for="ImagemThumbbailUrl" class="text-danger"></span>
            </div>

            <div class="form-check mb-2">
                <input class="form-check-input" asp-for="IsLanchePreferido" />
                <label class="form-check-label">Lanche Preferido</label>
            </div>

            <div class="form-check mb-3">
                <input class="form-check-input" asp-for="EmEstoque" />
                <label class="form-check-label">Disponível em Estoque</label>
            </div>

            <div class="mb-3">
                <label asp-for="CategoriaId" class="form-label">Categoria</label>
                <select asp-for="CategoriaId" class="form-select" asp-items="ViewBag.CategoriaId"></select>
                <span asp-validation-for="CategoriaId" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">Voltar à Lista</a>
                <button type="submit" class="btn btn-primary">Cadastrar</button>
            </div>
        </form>
    </div>
</div>
