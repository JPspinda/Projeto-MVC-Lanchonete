@model ReflectionIT.Mvc.Paging.PagingList<LanchesMac.Models.Lanche>

@{
    ViewData["Title"] = "Lanches";
}

<section class="bg-dark text-light py-5 min-vh-100">
    <div class="container">
        <!-- Cabeçalho -->
        <div class="d-flex flex-wrap justify-content-between align-items-center mb-4 gap-3">
            <h2 class="fw-bold text-warning m-0">Gerenciar Lanches</h2>
            <a asp-action="Create" class="btn btn-success fw-semibold d-flex align-items-center">
                <i class="bi bi-plus-circle me-2"></i> Novo Lanche
            </a>
        </div>

        <!-- Barra de filtro -->
        <form method="get" class="row g-2 mb-4">
            <div class="col-md-8 col-12">
                <input name="filter"
                       class="form-control bg-dark text-light border-warning"
                       placeholder="Filtrar lanches..."
                       value="@Model.RouteValue["filter"]" />
            </div>
            <div class="col-md-4 col-12 d-grid">
                <button type="submit" class="btn btn-outline-warning fw-semibold">
                    <i class="bi bi-search me-1"></i> Procurar
                </button>
            </div>
        </form>

        <!-- Total e Paginação -->
        <div class="d-flex flex-wrap justify-content-between align-items-center mb-3 gap-2">
            <span class="text-warning fw-bold">Total de lanches: @Model.TotalRecordCount</span>
            <vc:pager paging-list="@Model" />
        </div>

        <!-- Tabela de Lanches -->
        <div class="table-responsive shadow-lg rounded-3 overflow-hidden">
            <table class="table table-dark table-hover align-middle mb-0">
                <thead class="table-warning text-dark">
                    <tr>
                        <th>Imagem</th>
                        <th>Nome</th>
                        <th class="d-none d-md-table-cell">Descrição Curta</th>
                        <th>Preço</th>
                        <th class="d-none d-md-table-cell">Preferido</th>
                        <th class="d-none d-md-table-cell">Em Estoque</th>
                        <th class="d-none d-md-table-cell">Categoria</th>
                        <th class="text-center">Ações</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center">
                                <img src="@item.ImagemUrl" alt="@item.Nome"
                                     class="img-fluid rounded shadow-sm"
                                     style="width: 60px; height: 60px; object-fit: cover;" />
                            </td>
                            <td class="fw-semibold text-warning">@item.Nome</td>
                            <td class="d-none d-md-table-cell">@item.DescricaoCurta</td>
                            <td>@string.Format("{0:C}", item.Preco)</td>
                            <td class="d-none d-md-table-cell">
                                @if (item.IsLanchePreferido)
                                {
                                    <span class="badge bg-success">Sim</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Não</span>
                                }
                            </td>
                            <td class="d-none d-md-table-cell">
                                @if (item.EmEstoque)
                                {
                                    <span class="badge bg-success">Disponível</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Esgotado</span>
                                }
                            </td>
                            <td class="d-none d-md-table-cell">@item.Categoria?.categoriaNome</td>
                            <td class="text-center">
                                <div class="btn-group btn-group-sm" role="group">
                                    <a asp-action="Edit" asp-route-id="@item.lancheId"
                                       class="btn btn-outline-warning" title="Editar">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.lancheId"
                                       class="btn btn-outline-info" title="Detalhes">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.lancheId"
                                       class="btn btn-outline-danger" title="Excluir">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>
