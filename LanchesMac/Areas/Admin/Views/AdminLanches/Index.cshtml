@model ReflectionIT.Mvc.Paging.PagingList<LanchesMac.Models.Lanche>

@{
    ViewData["Title"] = "Lanches";
}

<section class="bg-dark text-light py-5 min-vh-100">
    <div class="container">

        <!-- Cabeçalho -->
        <div class="d-flex flex-wrap justify-content-between align-items-center mb-4 gap-3">
            <h2 class="fw-bold text-warning m-0">
                <i class="bi bi-hamburger me-2"></i> Gerenciar Lanches
            </h2>
            <a asp-action="Create" class="btn btn-success fw-semibold d-flex align-items-center">
                <i class="bi bi-plus-circle me-2"></i> Novo Lanche
            </a>
        </div>

        <!-- Barra de filtro -->
        <form method="get" class="row g-2 mb-4">
            <div class="col-md-8">
                <input name="filter"
                       class="form-control bg-dark text-light border-warning"
                       placeholder="Filtrar lanches..."
                       value="@Model.RouteValue["filter"]" />
            </div>
            <div class="col-md-4 d-grid">
                <button type="submit" class="btn btn-outline-warning fw-semibold">
                    <i class="bi bi-search me-1"></i> Procurar
                </button>
            </div>
        </form>

        <!-- Total e Paginação -->
        <div class="d-flex flex-wrap justify-content-between align-items-center mb-3 gap-2">
            <span class="text-warning fw-bold">Total de lanches: @Model.TotalRecordCount</span>
            <vc:pager paging-list="@Model" />
        </div>

        <!-- CARDS DE LANCHES -->
        <div class="row g-4">
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-xl-4">
                    <div class="card bg-dark text-light border border-warning shadow-lg h-100 rounded-4">

                        <!-- Imagem -->
                        <img src="@item.ImagemUrl" alt="@item.Nome"
                             class="card-img-top rounded-top-4 lanche-img">

                        <div class="card-body">
                            <h5 class="card-title text-warning fw-bold">@item.Nome</h5>
                            <p class="text-secondary small">@item.DescricaoCurta</p>

                            <p class="fw-bold mb-2 text-light">
                                Preço:
                                <span class="text-warning">@string.Format("{0:C}", item.Preco)</span>
                            </p>

                            <div class="mb-3">
                                <span class="badge @(item.IsLanchePreferido ? "bg-success" : "bg-secondary")">
                                    @((item.IsLanchePreferido ? "Preferido" : "Comum"))
                                </span>

                                <span class="badge @(item.EmEstoque ? "bg-success" : "bg-danger") ms-2">
                                    @(item.EmEstoque ? "Disponível" : "Esgotado")
                                </span>
                            </div>

                            <p class="text-light small mb-0">
                                Categoria:
                                <span class="text-warning">@item.Categoria?.categoriaNome</span>
                            </p>
                        </div>

                        <!-- Botões -->
                        <div class="card-footer bg-transparent border-0 text-center pb-3">
                            <div class="d-flex justify-content-center flex-wrap gap-2">

                                <a asp-action="Edit" asp-route-id="@item.lancheId"
                                   class="btn btn-icon btn-edit" title="Editar">
                                    <i class="bi bi-pencil-square"></i>
                                </a>

                                <a asp-action="Details" asp-route-id="@item.lancheId"
                                   class="btn btn-icon btn-details" title="Detalhes">
                                    <i class="bi bi-eye"></i>
                                </a>

                                <a asp-action="Delete" asp-route-id="@item.lancheId"
                                   class="btn btn-icon btn-delete" title="Excluir">
                                    <i class="bi bi-trash"></i>
                                </a>

                            </div>
                        </div>


                    </div>
                </div>
            }
        </div>

    </div>
</section>

<style>
    .card {
        transition: transform .25s ease, box-shadow .25s ease;
    }

        .card:hover {
            transform: translateY(-6px);
            box-shadow: 0 8px 20px rgba(255, 193, 7, 0.25);
        }

    .lanche-img {
        height: 200px;
        object-fit: cover;
        border-bottom: 1px solid rgba(255, 193, 7, 0.3);
    }

    .btn:hover {
        transform: scale(1.1);
        transition: 0.2s;
    }

    .card-footer .btn:hover {
        transform: scale(1.15);
    }

    /* ---------- PAGINAÇÃO CUSTOMIZADA (ReflectionIT Pager) ---------- */

    .pagination {
        display: flex;
        gap: 6px;
        justify-content: center;
    }

    .page-item {
        transition: 0.25s ease;
    }

        .page-item .page-link {
            background: #121212;
            border: 1px solid #c89d1b;
            color: #e7c15a;
            font-weight: 600;
            padding: 8px 14px;
            border-radius: 10px;
            transition: 0.25s ease;
        }

            .page-item .page-link:hover {
                background: #c89d1b;
                color: #111;
                box-shadow: 0 0 14px rgba(200, 157, 27, 0.7);
            }

        /* Página selecionada */
        .page-item.active .page-link {
            background: #c89d1b;
            border-color: #c89d1b;
            color: #111;
            box-shadow: 0 0 14px rgba(200, 157, 27, 0.8);
            font-weight: 700;
        }

        /* Desabilitado */
        .page-item.disabled .page-link {
            opacity: 0.5;
            cursor: not-allowed;
        }

    /* Setas anteriores/próximas */
    .page-link i {
        font-size: 0.9rem;
    }

    /* ----------- Botões Modernos (iguais aos da página de pedidos) ----------- */
    .btn-icon {
        width: 42px;
        height: 42px;
        padding: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 12px;
        font-size: 1.15rem;
        transition: 0.25s;
        font-weight: 600;
    }

    /* Botão Detalhes (Azul neon) */
    .btn-details {
        border: 1px solid #0dcaf0;
        color: #0dcaf0;
    }

        .btn-details:hover {
            background: #0dcaf0;
            color: #000;
            box-shadow: 0 0 12px rgba(13, 202, 240, 0.55);
        }

    /* Botão Editar (Dourado) */
    .btn-edit {
        border: 1px solid #e5b940;
        color: #e5b940;
    }

        .btn-edit:hover {
            background: #e5b940;
            color: #000;
            box-shadow: 0 0 12px rgba(229, 185, 64, 0.6);
        }

    /* Botão Excluir (Vermelho) */
    .btn-delete {
        border: 1px solid #d9534f;
        color: #d9534f;
    }

        .btn-delete:hover {
            background: #d9534f;
            color: #fff;
            box-shadow: 0 0 15px rgba(217, 83, 79, 0.6);
        }


</style>
