<style>
    .gold-container {
        background: #111;
        padding: 25px;
        border-radius: 12px;
        border: 1px solid #d4af37;
        color: #f8f8f8;
        box-shadow: 0 0 20px rgba(212, 175, 55, 0.25);
        animation: fadeIn 0.8s ease;
        max-width: 700px;
        margin: auto;
    }

    @@keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(10px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    .gold-title {
        font-size: 26px;
        font-weight: bold;
        color: #d4af37;
        text-align: center;
        margin-bottom: 25px;
        text-shadow: 0 0 10px rgba(212, 175, 55, 0.4);
    }

    .gold-icon {
        width: 120px;
        height: 120px;
        fill: #d4af37;
        display: block;
        margin: auto;
        filter: drop-shadow(0 0 8px rgba(212, 175, 55, 0.5));
        margin-bottom: 15px;
    }

    .gold-msg {
        text-align: center;
        margin-top: 20px;
    }

    .gold-list {
        margin-top: 10px;
        padding-left: 20px;
        color: #d4af37;
    }

    .gold-btn {
        padding: 12px 20px;
        background: transparent;
        border: 1px solid #d4af37;
        color: #d4af37;
        font-weight: bold;
        border-radius: 8px;
        transition: .3s;
        cursor: pointer;
        text-transform: uppercase;
    }

        .gold-btn:hover {
            background: #d4af37;
            color: #111;
            box-shadow: 0 0 15px rgba(212, 175, 55, .6);
        }
</style>

<div class="gold-container">

    <h2 class="gold-title">Resultado do Upload</h2>

    <!-- Ícone SVG (upload concluído) -->
    <svg class="gold-icon" viewBox="0 0 24 24">
        <path d="M5 20h14v-2H5v2zm7-18L5.33 9h3.34v4h4.66V9h3.34L12 2z" />
    </svg>

    <!-- ERRO -->
    <div class="gold-msg">
        @if (ViewData["Erro"] != null)
        {
            <svg class="gold-icon" viewBox="0 0 24 24" style="fill:#ff4d4d;">
                <path d="M12 2C6.48 2 2 6.48 2 12s4.48
                             10 10 10 10-4.48 10-10S17.52 2
                             12 2zm1 15h-2v-2h2v2zm0-4h-2V7h2v6z" />
            </svg>

            <h4 style="color:#ff4d4d; font-weight:bold;">
                @ViewData["Erro"]
            </h4>
        }
    </div>

    <!-- RESULTADO -->
    <div class="gold-msg">
        @if (ViewData["Resultado"] != null)
        {
            <h4 style="color:#d4af37; font-weight:bold;">@ViewData["Resultado"]</h4>
            <hr style="border-color:#d4af37;">

            @if (ViewBag.Arquivos != null)
            {
                <ul class="gold-list">
                    @foreach (string arquivo in ViewBag.Arquivos)
                    {
                        <li>@arquivo</li>
                    }
                </ul>
            }
        }
    </div>

    <div class="text-center mt-4">
        <a class="gold-btn"
           asp-controller="AdminImagens"
           asp-action="GetImagens">
            Exibir Imagens
        </a>
    </div>

</div>
