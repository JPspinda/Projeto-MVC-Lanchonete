@{
    ViewData["Title"] = "Visualizar Imagens";
}

<style>
    .gold-container {
        background: #111;
        padding: 25px;
        border-radius: 15px;
        border: 1px solid #d4af37;
        box-shadow: 0 0 20px rgba(212,175,55,0.25);
        color: #fff;
        animation: fadeIn .8s ease;
    }

    @@keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(15px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    .gold-title {
        color: #d4af37;
        font-size: 28px;
        font-weight: bold;
        text-align: center;
        text-shadow: 0 0 10px rgba(212,175,55,0.4);
        margin-bottom: 20px;
    }

    .gold-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
        gap: 20px;
    }

    .gold-item {
        background: #1a1a1a;
        border-radius: 10px;
        padding: 15px;
        border: 1px solid #d4af37;
        box-shadow: 0 0 10px rgba(212,175,55,0.15);
        transition: .3s;
        text-align: center;
    }

        .gold-item:hover {
            transform: scale(1.03);
            box-shadow: 0 0 20px rgba(212,175,55,0.4);
        }

    .gold-img {
        width: 100%;
        height: 140px;
        object-fit: cover;
        border-radius: 8px;
        border: 1px solid #d4af37;
    }

    .gold-btn-delete {
        display: inline-block;
        margin-top: 10px;
        padding: 8px 12px;
        border: 1px solid #ff4d4d;
        color: #ff4d4d;
        border-radius: 6px;
        transition: .3s;
        font-weight: bold;
    }

        .gold-btn-delete:hover {
            background: #ff4d4d;
            color: #111;
            box-shadow: 0 0 10px rgba(255,77,77,0.6);
        }

    .gold-btn-back {
        padding: 12px 20px;
        border: 1px solid #d4af37;
        color: #d4af37;
        background: transparent;
        font-weight: bold;
        border-radius: 10px;
        transition: .3s;
        text-transform: uppercase;
    }

        .gold-btn-back:hover {
            background: #d4af37;
            color: #111;
            box-shadow: 0 0 10px rgba(212,175,55,0.6);
        }

    /* Ícone SVG de erro */
    .gold-error-icon {
        width: 120px;
        height: 120px;
        margin: auto;
        display: block;
        fill: #ff4d4d;
        filter: drop-shadow(0 0 10px rgba(255,77,77,.5));
    }
</style>


<div class="gold-container">

    <h2 class="gold-title">Gerenciar Imagens</h2>

    @if (Model.Files != null)
    {
        <div class="gold-grid">

            @foreach (FileInfo file in Model.Files)
            {
                var caminho = Model.PathImagesProduto;

                <div class="gold-item">
                    <img src="~/@caminho/@file.Name"
                         class="gold-img"
                         title="@file.Name"
                         asp-append-version="true" />

                    <a class="gold-btn-delete"
                       href="@Url.Action("Deletefile", "AdminImagens", new { fname = file.Name })">
                        Deletar
                    </a>
                </div>
            }
        </div>
    }


    @if (ViewData["Erro"] != null)
    {
        <svg class="gold-error-icon" viewBox="0 0 24 24">
            <path d="M12 2C6.48 2 2 6.48 2 12s4.48
                         10 10 10 10-4.48 10-10S17.52 2
                         12 2zm1 15h-2v-2h2v2zm0-4h-2V7h2v6z" />
        </svg>

        <h4 style="text-align:center; color:#ff4d4d; margin-top:10px;">
            @ViewData["Erro"]
        </h4>
    }

    <hr style="border-color:#d4af37; margin:25px 0;">

    <p style="color:#d4af37; text-align:center;">
        Passe o mouse sobre as imagens para ver o nome
    </p>

    <div class="text-center mt-3">
        <a class="gold-btn-back"
           asp-controller="AdminImagens"
           asp-action="Index">
            Retornar
        </a>
    </div>

</div>
