<style>
    /* Base */
    :root {
        --bg: #0f1114;
        --panel: #16181b;
        --muted: #9aa0a6;
        --gold: #d2a828;
        --accent: rgba(210,168,40,0.12);
        --glass: rgba(255,255,255,0.02);
        --card-shadow: 0 8px 26px rgba(0,0,0,0.6);
    }

    html, body {
        background: var(--bg);
        color: #e9eef5;
        font-family: "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
    }

    .contact-wrap {
        max-width: 1100px;
        margin: 2.5rem auto;
        padding: 1rem;
    }

    .page-hero {
        display: flex;
        gap: 1.25rem;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 1.75rem;
    }

    .hero-left {
        flex: 1;
    }

    .hero-title {
        font-size: 1.9rem;
        font-weight: 700;
        color: var(--gold);
        margin: 0 0 .5rem 0;
        letter-spacing: 0.2px;
        transform: translateY(0);
        animation: fadeUp .6s ease both;
    }

    .hero-sub {
        color: var(--muted);
        margin: 0;
        font-size: 1rem;
        animation: fadeUp .6s .06s both;
    }

    .hero-illustration {
        width: 160px;
        height: 160px;
        border-radius: 14px;
        overflow: hidden;
        flex-shrink: 0;
        background: linear-gradient(180deg, rgba(210,168,40,0.06), transparent);
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: var(--card-shadow);
        border: 1px solid rgba(255,255,255,0.03);
        animation: float 6s ease-in-out infinite;
    }

        .hero-illustration img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    /* Cards row */
    .cards-row {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 1rem;
        margin-bottom: 1.5rem;
    }

    .contact-card {
        background: linear-gradient(180deg, rgba(255,255,255,0.02), rgba(255,255,255,0.01));
        border-radius: 12px;
        padding: 1.25rem;
        border: 1px solid rgba(255,255,255,0.03);
        box-shadow: 0 6px 20px rgba(0,0,0,0.55);
        transition: transform .25s ease, box-shadow .25s ease;
        position: relative;
        overflow: hidden;
    }

        .contact-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 18px 40px rgba(0,0,0,0.65);
        }

    .card-icon {
        width: 56px;
        height: 56px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border-radius: 10px;
        background: linear-gradient(180deg, rgba(210,168,40,0.12), rgba(210,168,40,0.06));
        color: var(--gold);
        font-size: 1.35rem;
        margin-bottom: .6rem;
        box-shadow: 0 6px 18px rgba(210,168,40,0.06) inset;
    }

    .card-title {
        font-weight: 700;
        color: #fff;
        margin: 0 0 .25rem 0;
    }

    .card-desc {
        color: var(--muted);
        margin: 0 0 .75rem 0;
        font-size: .95rem;
    }

    .card-cta-row {
        display: flex;
        gap: .75rem;
        align-items: center;
        margin-top: .5rem;
    }

    .btn-gold {
        background: linear-gradient(180deg,var(--gold), #c49b1f);
        color: #0a0a0a;
        border: none;
        padding: .55rem .9rem;
        border-radius: 10px;
        font-weight: 700;
        box-shadow: 0 6px 18px rgba(210,168,40,0.16);
        transition: transform .18s ease, box-shadow .18s ease;
    }

        .btn-gold:hover {
            transform: translateY(-4px);
            box-shadow: 0 18px 36px rgba(210,168,40,0.22);
        }

    .btn-ghost {
        background: transparent;
        border: 1px solid rgba(255,255,255,0.06);
        color: var(--muted);
        padding: .47rem .8rem;
        border-radius: 8px;
        transition: all .18s ease;
    }

        .btn-ghost:hover {
            color: #fff;
            border-color: rgba(210,168,40,0.14);
            transform: translateY(-2px);
        }

    /* Map & quick actions */
    .panel {
        background: linear-gradient(180deg, rgba(255,255,255,0.01), rgba(255,255,255,0.008));
        border-radius: 12px;
        padding: 1rem;
        border: 1px solid rgba(255,255,255,0.025);
        box-shadow: var(--card-shadow);
    }

    .map-row {
        display: grid;
        grid-template-columns: 1fr 360px;
        gap: 1rem;
        align-items: start;
    }

    .map-embed {
        border-radius: 10px;
        overflow: hidden;
        height: 100%;
        min-height: 320px;
        border: 1px solid rgba(255,255,255,0.03);
    }

    .quick-actions {
        padding: 1rem;
        display: flex;
        flex-direction: column;
        gap: 1rem;
        align-items: stretch;
    }

    .btn-whatsapp {
        background: #25D366;
        color: white;
        border-radius: 10px;
        padding: .65rem;
        font-weight: 700;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: .5rem;
        box-shadow: 0 8px 22px rgba(37,211,102,0.12);
    }

    .btn-call {
        background: var(--gold);
        color: #0a0a0a;
        border-radius: 10px;
        padding: .65rem;
        font-weight: 700;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: .5rem;
    }

    /* Footer small note */
    .info-note {
        color: var(--muted);
        font-size: .92rem;
        margin-top: .6rem;
    }

    /* Responsive */
    @@media (max-width: 992px) {
        .cards-row

    {
        grid-template-columns: repeat(2, 1fr);
    }

    .map-row {
        grid-template-columns: 1fr;
    }

    }
    @@media (max-width: 576px) {
        .cards-row

    {
        grid-template-columns: 1fr;
    }

    .hero-illustration {
        display: none;
    }

    }

    /* Animations */
    @@keyframes float {
        0%

    {
        transform: translateY(0);
    }

    50% {
        transform: translateY(-6px);
    }

    100% {
        transform: translateY(0);
    }

    }
    @@keyframes fadeUp {
        from

    {
        opacity: 0;
        transform: translateY(8px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    /* small table/list style for address / phone lists */
    .contact-list {
        list-style: none;
        padding: 0;
        margin: 0;
        color: var(--muted);
    }

        .contact-list li {
            padding: .45rem 0;
            display: flex;
            gap: .5rem;
            align-items: center;
        }

    /* subtle focus for inputs (if you later add a form) */
    input:focus, textarea:focus, select:focus {
        outline: none;
        box-shadow: 0 0 0 4px rgba(210,168,40,0.08);
        border-color: rgba(210,168,40,0.2);
    }
</style>

