<!-- JS: animações leves e melhorias de UX -->
<script>
    (function(){
        // small: add fade-in on scroll for panels (intersection observer)
        const io = new IntersectionObserver((entries) => {
            entries.forEach(e => {
                if(e.isIntersecting){
                    e.target.style.opacity = 1;
                    e.target.style.transform = 'translateY(0)';
                    io.unobserve(e.target);
                }
            });
        }, { threshold: 0.1 });

        document.querySelectorAll('.contact-card, .panel, .hero-illustration').forEach(el => {
            el.style.opacity = 0;
            el.style.transform = 'translateY(8px)';
            el.style.transition = 'opacity .6s ease, transform .6s ease';
            io.observe(el);
        });

        // tiny UX: smooth scroll for map links (if needed)
        document.querySelectorAll('a[href^="#"]').forEach(a=>{
            a.addEventListener('click', (ev) => {
                ev.preventDefault();
                const id = a.getAttribute('href').substring(1);
                const target = document.getElementById(id);
                if(target) target.scrollIntoView({behavior:'smooth', block:'center'});
            });
        });

        // mobile: ensure iframe is resized properly on orientation change
        window.addEventListener('orientationchange', () => {
            document.querySelectorAll('.map-embed iframe').forEach(iframe => {
                // trigger redraw
                iframe.style.display = 'none';
                setTimeout(()=> iframe.style.display = 'block', 60);
            });
        });
    })();
</script>
