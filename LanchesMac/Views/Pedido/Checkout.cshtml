@model Pedido

<h3 class="text-warning mb-3">Você está a um passo de completar o seu pedido</h3>
<hr class="border-warning" />
<form asp-action="Checkout" method="post" class="form-horizontal" role="form">
    <div class="row">
        <div class="form-group col-md-6">
            <label asp-for="Nome" class="control-label text-warning"></label>
            <input asp-for="Nome" class="form-control bg-dark text-light border-secondary" />
            <span asp-validation-for="Nome" class="text-danger"></span> <!--O asp-validation-for pega a mensagem de erro que foi definida na data annotation-->
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Sobrenome" class="control-label text-warning"></label>
            <input asp-for="Sobrenome" class="form-control bg-dark text-light border-secondary" />
            <span asp-validation-for="Sobrenome" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-6">
            <label asp-for="Endereco1" class="control-label text-warning"></label>
            <input asp-for="Endereco1" class="form-control bg-dark text-light border-secondary" />
            <span asp-validation-for="Endereco1" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Endereco2" class="control-label text-warning"></label>
            <input asp-for="Endereco2" class="form-control bg-dark text-light border-secondary" />
            <span asp-validation-for="Endereco2" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-4">
            <label asp-for="Cep" class="control-label text-warning"></label>
            <input asp-for="Cep" class="form-control bg-dark text-light border-secondary" />
            <span asp-validation-for="Cep" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="Cidade" class="control-label text-warning"></label>
            <input asp-for="Cidade" class="form-control bg-dark text-light border-secondary" />
            <span asp-validation-for="Cidade" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="Estado" class="control-label text-warning"></label>
            <input asp-for="Estado" class="form-control bg-dark text-light border-secondary" />
            <span asp-validation-for="Estado" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-6">
            <label asp-for="Telefone" class="control-label text-warning"></label>
            <input asp-for="Telefone" class="form-control bg-dark text-light border-secondary" />
            <span asp-validation-for="Telefone" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Email" class="control-label text-warning"></label>
            <input asp-for="Email" class="form-control bg-dark text-light border-secondary" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="form-group col-md-3">
            <input type="submit" value="Concluir pedido" class="btn btn-success btn-lg w-100" />
        </div>
        &nbsp;
        <div class="form-group col-md-3">
            <a asp-controller="CarrinhoCompra" asp-action="Index" class="btn btn-outline-warning btn-lg w-100">Voltar ao carrinho</a>
        </div>
    </div>
</form>
