@model Pedido

@{
    ViewData["Title"] = "Finalizando Pedido";
}

<div class="container my-5">
    <div class="p-5 bg-dark text-light rounded-4 shadow-lg border border-secondary">
        <div class="text-center mb-4">
            <h2 class="fw-bold text-warning">
                <i class="bi bi-bag-check-fill me-2"></i>Finalize seu Pedido
            </h2>
            <p class="text-muted mb-0">Você está a um passo de completar o seu pedido</p>
            <hr class="border-secondary opacity-50 w-25 mx-auto mt-3" />
        </div>

        <form asp-action="Checkout" method="post" role="form">
            <!-- Nome e Sobrenome -->
            <div class="row g-4">
                <div class="col-md-6">
                    <label asp-for="Nome" class="form-label text-warning fw-semibold"></label>
                    <input asp-for="Nome" class="form-control bg-dark text-light border-secondary rounded-3" />
                    <span asp-validation-for="Nome" class="text-danger small"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Sobrenome" class="form-label text-warning fw-semibold"></label>
                    <input asp-for="Sobrenome" class="form-control bg-dark text-light border-secondary rounded-3" />
                    <span asp-validation-for="Sobrenome" class="text-danger small"></span>
                </div>
            </div>

            <!-- Endereços -->
            <div class="row g-4 mt-2">
                <div class="col-md-6">
                    <label asp-for="Endereco1" class="form-label text-warning fw-semibold"></label>
                    <input asp-for="Endereco1" class="form-control bg-dark text-light border-secondary rounded-3" />
                    <span asp-validation-for="Endereco1" class="text-danger small"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Endereco2" class="form-label text-warning fw-semibold"></label>
                    <input asp-for="Endereco2" class="form-control bg-dark text-light border-secondary rounded-3" />
                    <span asp-validation-for="Endereco2" class="text-danger small"></span>
                </div>
            </div>

            <!-- CEP / Cidade / Estado -->
            <div class="row g-4 mt-2">
                <div class="col-md-4">
                    <label asp-for="Cep" class="form-label text-warning fw-semibold"></label>
                    <input asp-for="Cep" class="form-control bg-dark text-light border-secondary rounded-3" />
                    <span asp-validation-for="Cep" class="text-danger small"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="Cidade" class="form-label text-warning fw-semibold"></label>
                    <input asp-for="Cidade" class="form-control bg-dark text-light border-secondary rounded-3" />
                    <span asp-validation-for="Cidade" class="text-danger small"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="Estado" class="form-label text-warning fw-semibold"></label>
                    <input asp-for="Estado" class="form-control bg-dark text-light border-secondary rounded-3" />
                    <span asp-validation-for="Estado" class="text-danger small"></span>
                </div>
            </div>

            <!-- Contato -->
            <div class="row g-4 mt-2">
                <div class="col-md-6">
                    <label asp-for="Telefone" class="form-label text-warning fw-semibold"></label>
                    <input asp-for="Telefone" class="form-control bg-dark text-light border-secondary rounded-3" />
                    <span asp-validation-for="Telefone" class="text-danger small"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Email" class="form-label text-warning fw-semibold"></label>
                    <input asp-for="Email" class="form-control bg-dark text-light border-secondary rounded-3" />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>
            </div>

            <!-- Botões -->
            <div class="d-flex justify-content-end gap-3 mt-5">
                <a asp-controller="CarrinhoCompra"
                   asp-action="Index"
                   class="btn btn-outline-warning btn-lg fw-semibold rounded-pill shadow-sm px-4">
                    <i class="bi bi-arrow-left-circle me-2"></i> Voltar ao Carrinho
                </a>

                <button type="submit"
                        class="btn btn-success btn-lg fw-semibold rounded-pill shadow-sm px-4">
                    <i class="bi bi-bag-check-fill me-2"></i> Concluir Pedido
                </button>
            </div>
        </form>
    </div>
</div>
