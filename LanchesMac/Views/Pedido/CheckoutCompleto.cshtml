@model Pedido

<div class="conatainer">
    <div class="jumbotron">
        <h2>@ViewBag.CheckoutCompletoMensagem</h2>
    </div>

    <div class="card">
        <div class="card-body">
            <p>Cliente: <strong>@Model.Nome</strong></p>
            <p>Data do pedido: <strong>@Model.PedidoEnviado</strong></p>
            <p>Número do pedido: <strong>@Model.PedidoId</strong></p>

            <table class="table">
                <tr>
                    <th>Quantidade</th>
                    <th>Lanche</th>
                    <th>Preço</th>
                </tr>

                @foreach(var item in Model.PedidoItens)
                {
                    <tr>
                        <td>@item.Quantidade</td>
                        <td>@item.Lanche.Nome</td>
                        <td>@item.Lanche.Preco.ToString("c")</td>
                    </tr>
                }
            </table>

            <h4>Valor total do pedido: <strong>@(((decimal)ViewBag.TotalPedido).ToString("C1"))</strong></h4>
        </div>
    </div>
</div>
<div class="form-group" style="text-align: center">
    <h3>
        <a asp-controller="Home" asp-action="Index" class="nav-link text-info">Retornar</a>
    </h3>
</div>