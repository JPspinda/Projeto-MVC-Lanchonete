@model Pedido

<div class="container mt-4">
    <div class="jumbotron bg-dark text-light p-4 rounded">
        <h2 class="text-warning">@ViewBag.CheckoutCompletoMensagem</h2>
    </div>

    <div class="card bg-dark text-light border-0 shadow-sm mt-3">
        <div class="card-body">
            <p>Cliente: <strong class="text-warning">@Model.Nome</strong></p>
            <p>Data do pedido: <strong class="text-warning">@Model.PedidoEnviado</strong></p>
            <p>Número do pedido: <strong class="text-warning">@Model.PedidoId</strong></p>

            <table class="table table-dark table-striped mt-3">
                <thead class="table-warning text-dark">
                    <tr>
                        <th>Quantidade</th>
                        <th>Lanche</th>
                        <th>Preço</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.PedidoItens)
                    {
                        <tr>
                            <td>@item.Quantidade</td>
                            <td>@item.Lanche.Nome</td>
                            <td class="text-success">@item.Lanche.Preco.ToString("c")</td>
                        </tr>
                    }
                </tbody>
            </table>

            <h4 class="mt-3">Valor total do pedido: <strong class="text-success">@(((decimal)ViewBag.TotalPedido).ToString("C1"))</strong></h4>
        </div>
    </div>
</div>

<div class="form-group text-center mt-4">
    <h3>
        <a asp-controller="Home" asp-action="Index" class="nav-link text-info">Retornar</a>
    </h3>
</div>
