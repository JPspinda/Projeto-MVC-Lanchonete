@model LoginViewModel

@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
    ViewData["Title"] = "Login";
}

<section class="vh-100 d-flex align-items-center justify-content-center bg-dark text-light">
    <div class="card border border-secondary-subtle shadow-lg rounded-4 animate-fade"
         style="max-width: 420px; width: 100%; background-color: #1e1e1e;">
        <div class="card-body p-5">

            <!-- Cabeçalho -->
            <div class="text-center mb-4">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
                     class="img-fluid rounded mb-3"
                     alt="Login Illustration" style="max-width: 200px;">
                <h3 class="fw-bold text-warning">Entrar na sua conta</h3>
                <p class="text-secondary">Bem-vindo de volta! Faça login para continuar.</p>
                <hr class="border-warning opacity-50 w-50 mx-auto" />
            </div>

            <!-- Formulário -->
            <form asp-controller="Account" asp-action="Login" method="post">
                <input type="hidden" asp-for="ReturnUrl" />

                <!-- Usuário -->
                <div class="form-outline mb-4">
                    <label class="form-label text-warning fw-semibold" asp-for="Email"></label>
                    <input asp-for="Email" class="form-control form-control-lg bg-dark text-light border-secondary rounded-3 focus-ring"
                           placeholder="Digite seu email" />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <!-- Senha -->
                <div class="form-outline mb-4">
                    <label class="form-label text-warning fw-semibold" asp-for="Password"></label>
                    <input asp-for="Password" class="form-control form-control-lg bg-dark text-light border-secondary rounded-3 focus-ring"
                           placeholder="Digite sua senha" />
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <!-- Botão -->
                <div class="d-grid mt-4">
                    <button type="submit" class="btn btn-warning btn-lg fw-semibold rounded-3 shadow-sm transition">
                        Entrar
                    </button>
                </div>

                <!-- Link para registro -->
                <div class="text-center mt-4">
                    <p class="text-light">
                        Ainda não tem uma conta?
                        <a asp-controller="Account" asp-action="Register"
                           class="text-warning text-decoration-none fw-semibold hover-underline">
                            Criar agora
                        </a>
                    </p>
                </div>
            </form>
        </div>
    </div>
</section>

<style>
    /* Animação de entrada */
    .animate-fade {
        animation: fadeIn 0.8s ease-in-out;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Efeito ao focar nos campos */
    .focus-ring:focus {
        border-color: #ffc107 !important;
        box-shadow: 0 0 8px rgba(255, 193, 7, 0.5);
        transition: 0.3s ease;
    }

    /* Botão com efeito hover */
    .transition:hover {
        transform: scale(1.03);
        box-shadow: 0 0 15px rgba(255, 193, 7, 0.4);
        transition: all 0.25s ease-in-out;
    }

    /* Link com sublinhado suave */
    .hover-underline:hover {
        text-decoration: underline;
        transition: 0.2s ease-in-out;
    }
</style>
