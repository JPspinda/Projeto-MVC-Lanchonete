@model Lanche;

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card bg-dark text-light border-0 shadow-lg rounded-4 overflow-hidden">

                <div class="text-center bg-secondary bg-opacity-25 p-4">
                    <img src="@Model.ImagemUrl" class="img-fluid rounded-3 shadow-sm" alt="@Model.Nome" style="max-height: 350px; object-fit: cover;">
                </div>

                <div class="card-body p-5">
                    <h2 class="card-title fw-bold text-warning text-center mb-3">@Model.Nome</h2>
                    <hr class="border-secondary opacity-50 w-25 mx-auto mb-4" />

                    <p class="card-text text-secondary fs-5 mb-4 text-center">
                        @Model.DescricaoDetalhada
                    </p>

                    <div class="text-center mb-4">
                        <h4 class="fw-semibold">Preço: <span class="text-success">@Model.Preco.ToString("c")</span></h4>
                    </div>

                    <div class="d-flex justify-content-center gap-3">
                        <a asp-controller="Lanche" asp-action="List"
                           class="btn btn-outline-warning btn-lg fw-semibold shadow-sm">
                            <i class="bi bi-arrow-left-circle me-1"></i> Ver todos os lanches
                        </a>

                        <a class="btn btn-success btn-lg fw-semibold shadow-sm"
                           id="cartButton"
                           asp-controller="CarrinhoCompra"
                           asp-action="AdicionarItemNoCarrinhoCompra"
                           asp-route-lancheId="@Model.lancheId">
                            <i class="bi bi-cart-plus me-1"></i> Adicionar @Model.Nome no carrinho
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
