<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LanchesMac</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/LanchesMac.styles.css" asp-append-version="true" />
</head>

<body class="bg-dark text-light">

    <!-- NAVBAR -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm border-bottom border-secondary">
            <div class="container">
                <a class="navbar-brand fw-bold text-warning" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-basket2-fill me-2"></i>LanchesMac
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse justify-content-between" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item"><a class="nav-link active" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Contato" asp-action="Index">Contato</a></li>
                        <li class="nav-item">@await Component.InvokeAsync("CategoriaMenu")</li>
                        <li class="nav-item">
                            @if (User.IsInRole("Admin"))
                            {
                                <a class="nav-link text-warning fw-semibold" asp-area="Admin" asp-controller="Admin" asp-action="Index">
                                    <i class="bi bi-shield-lock me-1"></i>Área do Admin
                                </a>
                            }
                        </li>
                    </ul>

                    <div class="d-flex align-items-center gap-3">
                        <div>@await Component.InvokeAsync("CarrinhoCompraResumo")</div>

                        <form class="d-flex" asp-controller="Lanche" asp-action="Search" method="get">
                            <input type="text" class="form-control me-2" placeholder="Procurar produto" name="searchString" value="@ViewData["searchString"]">
                            <button class="btn btn-outline-warning" type="submit"><i class="bi bi-search"></i></button>
                        </form>

                        @await Html.PartialAsync("_LoginPartial")
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <!-- CONTEÚDO PRINCIPAL -->
    <main class="container my-5">
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer class="bg-dark border-top border-secondary text-center text-md-start text-light pt-5">
        <div class="container pb-4">
            <div class="row gy-4">
                <!-- Empresa -->
                <div class="col-md-3 col-lg-4">
                    <h6 class="text-uppercase fw-bold mb-3 text-warning">
                        <i class="bi bi-shop me-2"></i>Company Name
                    </h6>
                    <p class="small">Here you can use rows and columns to organize your footer content. Lorem ipsum dolor sit amet, consectetur adipisicing elit.</p>
                </div>

                <!-- Produtos -->
                <div class="col-md-2 col-lg-2">
                    <h6 class="text-uppercase fw-bold mb-3 text-warning">Products</h6>
                    <ul class="list-unstyled small">
                        <li><a href="#!" class="text-reset text-decoration-none">Angular</a></li>
                        <li><a href="#!" class="text-reset text-decoration-none">React</a></li>
                        <li><a href="#!" class="text-reset text-decoration-none">Vue</a></li>
                        <li><a href="#!" class="text-reset text-decoration-none">Laravel</a></li>
                    </ul>
                </div>

                <!-- Links úteis -->
                <div class="col-md-3 col-lg-2">
                    <h6 class="text-uppercase fw-bold mb-3 text-warning">Useful links</h6>
                    <ul class="list-unstyled small">
                        <li><a href="#!" class="text-reset text-decoration-none">Pricing</a></li>
                        <li><a href="#!" class="text-reset text-decoration-none">Settings</a></li>
                        <li><a href="#!" class="text-reset text-decoration-none">Orders</a></li>
                        <li><a href="#!" class="text-reset text-decoration-none">Help</a></li>
                    </ul>
                </div>

                <!-- Contato -->
                <div class="col-md-4 col-lg-3">
                    <h6 class="text-uppercase fw-bold mb-3 text-warning">Contact</h6>
                    <ul class="list-unstyled small">
                        <li><i class="bi bi-geo-alt me-2"></i>New York, NY 10012, US</li>
                        <li><i class="bi bi-envelope me-2"></i>info@example.com</li>
                        <li><i class="bi bi-telephone me-2"></i>+01 234 567 88</li>
                        <li><i class="bi bi-printer me-2"></i>+01 234 567 89</li>
                    </ul>
                </div>
            </div>

            <hr class="border-secondary my-4" />

            <!-- Social -->
            <div class="d-flex justify-content-center gap-3 mb-3">
                <a href="#" class="text-reset"><i class="bi bi-facebook fs-5"></i></a>
                <a href="#" class="text-reset"><i class="bi bi-twitter fs-5"></i></a>
                <a href="#" class="text-reset"><i class="bi bi-google fs-5"></i></a>
                <a href="#" class="text-reset"><i class="bi bi-instagram fs-5"></i></a>
                <a href="#" class="text-reset"><i class="bi bi-linkedin fs-5"></i></a>
                <a href="#" class="text-reset"><i class="bi bi-github fs-5"></i></a>
            </div>

            <!-- Copyright -->
            <div class="text-center small py-3 border-top border-secondary">
                © 2021 Copyright:
                <a href="https://mdbootstrap.com/" class="text-warning text-decoration-none">MDBootstrap.com</a>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
