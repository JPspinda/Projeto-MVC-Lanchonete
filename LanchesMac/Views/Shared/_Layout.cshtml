<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LanchesMac</title>

    <!-- Bootstrap e Ícones -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/LanchesMac.styles.css" asp-append-version="true" />
</head>

<body class="bg-dark text-light d-flex flex-column min-vh-100">

    <!-- NAVBAR -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm border-bottom border-secondary py-3">
            <div class="container">
                <!-- Logo -->
                <a class="navbar-brand fw-bold text-warning d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-basket2-fill me-2 fs-4"></i>LanchesMac
                </a>

                <!-- Botão Toggle -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Itens da Navbar -->
                <div class="collapse navbar-collapse justify-content-between" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door me-1"></i>Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Contato" asp-action="Index">
                                <i class="bi bi-envelope me-1"></i>Contato
                            </a>
                        </li>
                        <li class="nav-item">@await Component.InvokeAsync("CategoriaMenu")</li>

                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-warning fw-semibold" asp-area="Admin" asp-controller="Admin" asp-action="Index">
                                    <i class="bi bi-shield-lock me-1"></i>Área do Admin
                                </a>
                            </li>
                        }
                    </ul>

                    <!-- Carrinho, Pesquisa e Login -->
                    <div class="d-flex align-items-center flex-wrap gap-3">
                        <div>@await Component.InvokeAsync("CarrinhoCompraResumo")</div>

                        <form class="d-flex" asp-controller="Lanche" asp-action="Search" method="get" role="search">
                            <input type="text"
                                   name="searchString"
                                   value="@ViewData["searchString"]"
                                   class="form-control bg-dark text-light border-warning me-2"
                                   placeholder="Procurar produto..." />
                            <button class="btn btn-outline-warning" type="submit">
                                <i class="bi bi-search"></i>
                            </button>
                        </form>

                        @await Html.PartialAsync("_LoginPartial")
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <!-- CONTEÚDO PRINCIPAL -->
    <main class="container my-5 flex-grow-1">
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer class="bg-dark border-top border-secondary text-center text-md-start text-light pt-5 mt-auto">
        <div class="container pb-4">
            <div class="row gy-4">

                <!-- Empresa -->
                <div class="col-md-3 col-lg-4">
                    <h6 class="text-uppercase fw-bold mb-3 text-warning">
                        <i class="bi bi-shop me-2"></i>LanchesMac
                    </h6>
                    <p class="small mb-0">
                        Seu lanche favorito entregue com rapidez e qualidade.
                        Experimente nossos produtos e sinta o sabor!
                    </p>
                </div>

                <!-- Produtos -->
                <div class="col-md-2 col-lg-2">
                    <h6 class="text-uppercase fw-bold mb-3 text-warning">Produtos</h6>
                    <ul class="list-unstyled small">
                        <li><a href="#!" class="text-reset text-decoration-none">Lanches</a></li>
                        <li><a href="#!" class="text-reset text-decoration-none">Bebidas</a></li>
                        <li><a href="#!" class="text-reset text-decoration-none">Sobremesas</a></li>
                        <li><a href="#!" class="text-reset text-decoration-none">Combos</a></li>
                    </ul>
                </div>

                <!-- Links úteis -->
                <div class="col-md-3 col-lg-2">
                    <h6 class="text-uppercase fw-bold mb-3 text-warning">Links úteis</h6>
                    <ul class="list-unstyled small">
                        <li><a href="#!" class="text-reset text-decoration-none">Promoções</a></li>
                        <li><a href="#!" class="text-reset text-decoration-none">Meus Pedidos</a></li>
                        <li><a href="#!" class="text-reset text-decoration-none">Ajuda</a></li>
                        <li><a href="#!" class="text-reset text-decoration-none">Política de Privacidade</a></li>
                    </ul>
                </div>

                <!-- Contato -->
                <div class="col-md-4 col-lg-3">
                    <h6 class="text-uppercase fw-bold mb-3 text-warning">Contato</h6>
                    <ul class="list-unstyled small mb-0">
                        <li><i class="bi bi-geo-alt me-2"></i>São Paulo, SP - Brasil</li>
                        <li><i class="bi bi-envelope me-2"></i>contato@lanchesmac.com</li>
                        <li><i class="bi bi-telephone me-2"></i>(11) 99999-9999</li>
                    </ul>
                </div>
            </div>

            <hr class="border-secondary my-4" />

            <!-- Redes Sociais -->
            <div class="d-flex justify-content-center gap-3 mb-3">
                <a href="#" class="text-reset"><i class="bi bi-facebook fs-5"></i></a>
                <a href="#" class="text-reset"><i class="bi bi-instagram fs-5"></i></a>
                <a href="#" class="text-reset"><i class="bi bi-twitter fs-5"></i></a>
                <a href="#" class="text-reset"><i class="bi bi-tiktok fs-5"></i></a>
                <a href="#" class="text-reset"><i class="bi bi-github fs-5"></i></a>
            </div>

            <!-- Copyright -->
            <div class="text-center small py-3 border-top border-secondary text-secondary">
                © @DateTime.Now.Year — <span class="text-warning fw-semibold">LanchesMac</span>. Todos os direitos reservados.
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
