<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - LanchesMac</title>

    <!-- CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/LanchesMac.styles.css" asp-append-version="true" />
</head>

<body class="bg-dark text-light d-flex flex-column min-vh-100">

    <!-- NAVBAR -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm border-bottom border-secondary py-3">
            <div class="container">

                <!-- LOGO -->
                <a class="navbar-brand fw-bold text-warning d-flex align-items-center"
                   asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-basket2-fill me-2 fs-4"></i>LanchesMac
                </a>

                <!-- TOGGLE MOBILE -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- NAV ITEMS -->
                <div class="collapse navbar-collapse justify-content-between" id="navbarNav">

                    <!-- LINKS ESQUERDA -->
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0 text-center text-lg-start">

                        <li class="nav-item">
                            <a class="nav-link active" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door me-1"></i>Home
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Contato" asp-action="Index">
                                <i class="bi bi-envelope me-1"></i>Contato
                            </a>
                        </li>

                        <li class="nav-item">
                            @await Component.InvokeAsync("CategoriaMenu")
                        </li>

                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-warning fw-semibold" asp-area="Admin"
                                   asp-controller="Admin" asp-action="Index">
                                    <i class="bi bi-shield-lock me-1"></i>Área do Admin
                                </a>
                            </li>
                        }
                    </ul>

                    <!-- ITENS DIREITA: Carrinho, Busca, Login -->
                    <div class="d-flex flex-column flex-lg-row align-items-lg-center gap-3 mt-3 mt-lg-0">

                        <!-- CARRINHO -->
                        <div class="text-center text-lg-start">
                            @await Component.InvokeAsync("CarrinhoCompraResumo")
                        </div>

                        <!-- BUSCA -->
                        <form class="d-flex flex-nowrap w-100" asp-controller="Lanche" asp-action="Search" method="get" role="search">
                            <input type="text"
                                   name="searchString"
                                   value="@ViewData["searchString"]"
                                   class="form-control bg-dark text-light border-warning"
                                   placeholder="Procurar produto..." />
                            <button class="btn btn-outline-warning ms-2" type="submit">
                                <i class="bi bi-search"></i>
                            </button>
                        </form>

                        <!-- LOGIN -->
                        <div class="text-center text-lg-start w-100">
                            @await Html.PartialAsync("_LoginPartial")
                        </div>

                    </div>
                </div>
            </div>
        </nav>
    </header>

    <!-- CONTEÚDO -->
    <main class="container my-4 flex-grow-1">
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <partial name="_Footer" />

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
