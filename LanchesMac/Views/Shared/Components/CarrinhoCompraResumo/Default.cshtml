@model CarrinhoCompraViewModel

@if (Model.CarrinhoCompra.CarrinhoCompraItens.Count > 0)
{
    <div class="d-flex align-items-center ms-2">
        <a class="btn btn-outline-warning position-relative rounded-pill px-3 py-2 fw-semibold shadow-sm"
           asp-controller="CarrinhoCompra"
           asp-action="Index">
            <i class="bi bi-cart-fill me-1"></i> Carrinho

            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                @Model.CarrinhoCompra.CarrinhoCompraItens.Count
            </span>
        </a>
    </div>
}
else
{
    <div class="d-flex align-items-center ms-2">
        <a class="btn btn-outline-secondary rounded-pill px-3 py-2 fw-semibold disabled" tabindex="-1" aria-disabled="true">
            <i class="bi bi-cart"></i> Carrinho
        </a>
    </div>
}
