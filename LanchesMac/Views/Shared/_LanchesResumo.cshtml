@model Lanche;

<div class="col-sm-6 col-md-4 col-lg-3 mb-4">
    <div class="card h-100 bg-dark text-light border-0 shadow-sm">
        <img src="@Model.ImagemUrl" class="card-img-top img-fluid rounded-top" alt="@Model.Nome" />

        <div class="card-body d-flex flex-column justify-content-between">
            <div>
                <h5 class="card-title fw-bold text-warning mb-2">
                    <a asp-controller="Lanche"
                       asp-action="Details"
                       asp-route-lancheId="@Model.lancheId"
                       class="text-decoration-none text-warning d-flex align-items-center">
                        <i class="bi bi-eye me-2"></i> @Model.Nome
                    </a>
                </h5>
                <p class="card-text text-secondary small mb-2">@Model.DescricaoCurta</p>
            </div>

            <div>
                <h4 class="fw-semibold mb-3">Preço: <span class="text-success">@Model.Preco.ToString("c")</span></h4>
                <a class="btn btn-outline-warning w-100 fw-semibold"
                   id="cartButton"
                   asp-controller="CarrinhoCompra"
                   asp-action="AdicionarItemNoCarrinhoCompra"
                   asp-route-lancheId="@Model.lancheId">
                    <i class="bi bi-cart-plus me-1"></i> Incluir no carrinho
                </a>
            </div>
        </div>
    </div>
</div>
